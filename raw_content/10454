	function showAd(ad){
	var loader= document.getElementById(ad + '_loader');
	pos = document.getElementById(ad); 
	if (pos) pos.appendChild(loader);
	else {loader.parentNode.removeChild(loader);}
	if (pos) 
		pos = pos.childNodes.item(0);
		while (pos.nodeType!=1){
				pos = pos.childNodes.item(0);
			}
		pos.style.display='block';
	}
	</script>
     
