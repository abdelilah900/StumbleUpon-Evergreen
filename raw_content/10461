					var h=0;
					for(var x=0;x<p.length;x++){
						if(p[x].substring(0,p[x].indexOf('='))==k){
							p[x]=k+"="+v;
							h=1
						}
					}
					if(!h){
						p[p.length]=k+"="+v;
					}
				}
			}
			a=a.substring(e+1);
		}
	}
	if(!w){
		return;
	}
