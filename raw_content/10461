			var e=a.indexOf('&');
			if(e==-1){
				e=a.length;
			}
			var k=a.substring(0,a.substring(0,e).indexOf('='));
			var v=a.substring(a.substring(0,e).indexOf('=')+1,e);
			if(k.substring(0,4)=='amp;'){
				k=k.substring(4);
			}
