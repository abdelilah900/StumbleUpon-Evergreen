	trlistsbox.switchStory = function(story) {
		$(".trlistsbox .story a").attr("href", story.url);
		$(".trlistsbox .story h4").html("<a href='" + story.url + "'>" + story.headline + "</a>");
		$(".trlistsbox .story p.summary").html(story.summary);

		if(trlistsbox.current_tab != "companies") {
			$(".trlistsbox .story img").attr({
				src: story.smallImage.url,
				width: story.smallImage.width,
				height: story.smallImage.height
			});
		}
	};

	$("#trlistsbox-a-technologies, #trlistsbox-a-innovators, #trlistsbox-a-companies").click(function(event) {
		event.preventDefault();
		$(".trliststabs li").removeClass("active");
		$(this).parent().addClass("active");
		trlistsbox.current_tab = $(this).attr("id").split("-")[2];

		$(".trlistsbox .story").removeClass("technologies innovators companies").addClass(trlistsbox.current_tab);

		switch(trlistsbox.current_tab) {
			case "technologies":
				$(".list-intro h3").text("TR10");
				$(".list-intro p").html("Our list of the 10 most innovative technologies of 2012. <a href='/tr10/'>See list &raquo;</a>");
				$(".trlists-see-more p").text("See more of our TR10 List");

				_gaq.push(["_trackEvent","Widget","TR Lists","Tab - Technologies"]);

				break;
			case "innovators":
				$(".list-intro h3").text("TR35");
				$(".list-intro p").html("Our list of the 35 young innovators of 2011. <a href='/tr35/'>See list &raquo;</a>");
				$(".trlists-see-more p").text("See more of our TR35 List");

				_gaq.push(["_trackEvent","Widget","TR Lists","Tab - Innovators"]);

				break;
			case "companies":
				$(".list-intro h3").text("TR50");
				$(".list-intro p").html("Our list of the 50 most innovative companies of 2012. <a href='/tr50/'>See list &raquo;</a> ");
				$(".trlists-see-more p").text("See more of our TR50 List");

				_gaq.push(["_trackEvent","Widget","TR Lists","Tab - Companies"]);

				break;
		}

		trlistsbox.switchStory(trlistsbox.lists[trlistsbox.current_tab].stories[0]);
	});

	$(".trlists-see-more ul.story-nav a").click(function(event) {
		event.preventDefault();

		var prev_story = trlistsbox.current_story - 1;
		var next_story = trlistsbox.current_story + 1;

		var story = {};

		if(next_story >= trlistsbox.lists[trlistsbox.current_tab].stories.length) {
			next_story = 0;
		}

		if(prev_story < 0) {
			prev_story = trlistsbox.lists[trlistsbox.current_tab].stories.length - 1;
		}

		if($(this).hasClass("prev")) {
			trlistsbox.current_story = prev_story;

			_gaq.push(["_trackEvent","Widget","TR Lists","Previous - " + trlistsbox.current_tab]);
		} else {
			trlistsbox.current_story = next_story;

			_gaq.push(["_trackEvent","Widget","TR Lists","Next - " + trlistsbox.current_tab]);
		}

		story = trlistsbox.lists[trlistsbox.current_tab].stories[trlistsbox.current_story];
		trlistsbox.switchStory(story);
	});

	$.getJSON("/api/lists/all/", function(data) {
		trlistsbox.lists = data;
	});
});
</script>



































