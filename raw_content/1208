    			<script type="text/javascript" >
		jQuery(function($) {
			$('#ididitform a').click(function() {
				var $this = $(this);
				var data = {
					action: 'ididit',
					userid: $('#ididituser').val(),
					postid: $('#ididitpost').val(),
					status: $this.attr('rel')
				};
				jQuery.post(
					'http://greatist.com/wp-admin/admin-ajax.php', 
					data, 
					function(response) {
						if(response == '1') {
							$('#ididitform a.ino').addClass('did');
							$('#ididitform a.iyes').removeClass('did');
						}
						if(response == '2') {
							$('#ididitform a.ino').removeClass('did');
							$('#ididitform a.iyes').addClass('did');
						}
					}
				);
				return false;
			});
		});
	</script>	
	
