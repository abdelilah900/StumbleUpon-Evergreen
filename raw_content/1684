								$('#transcript select').bind('change', function() {
									$.ajax({
										url: '/talks/subtitles/id/263/lang/' + $(this).find('option:selected').val() + '/format/html',
										dataType: 'html',
										beforeSend: function(xhr) {
											$('#loadingTranscriptAnim').css('display', 'inline');
										},
										complete: function(xhr) {
											$('#loadingTranscriptAnim').css('display', 'none');
										},
										success: function(data, textStatus, jqXHR) {
											$('#transcriptText').html(data);
										},
										error: function(jqXHR, textStatus, errorThrown) {
											$('#transcriptText').html('Unable to retrieve transcript<br /> status=' + textStatus + ' - ' + errorThrown)
										}
									});
								});
							});
														$(function() {
									$('div p a.transcriptLink').live('click', function(e) {
