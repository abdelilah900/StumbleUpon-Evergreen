				});

				subItemsLeftEdge = $subItems.offset().left;
				subItemsRightEdge = subItemsLeftEdge + subItemsWidth;

				if (subItemsLeftEdge < mainNavLeftEdge) {
					subItemsMarginLeft += mainNavLeftEdge - subItemsLeftEdge;
				} else if (subItemsRightEdge > lastCategoryRightEdge) {
					subItemsMarginLeft += lastCategoryRightEdge - subItemsRightEdge;
				}

				$subItems.css('margin-left', subItemsMarginLeft);


				if ($thisCategory[0] == $currentCategory[0]) {
					$subItems.css('visibility', 'visible');
				} else {
					$thisCategory.hover(
						function () { $currentSubItems.hide(); },
						function () { $currentSubItems.show(); }
					);
				}

			});
	});
</script>







	</div>
</div>
