<div id="registration-modal-box" style="display: none;">
	
	<script type="text/javascript" src="http://registration.good.is/javascripts/vendor/jquery-form/jquery.form.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/vendor/simplemodal/jquery.simplemodal.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/rails.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/parseuri.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/compiled/registration.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/vendor/jquery-cookie/jquery.cookie.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/vendor/backbone/underscore-min.js"></script>
	<script type="text/javascript" src="http://registration.good.is/javascripts/vendor/backbone/backbone-min.js"></script>
	<script type="text/javascript" src="/js/login.js"></script>
	<script type="text/javascript">
		function deleteRedirectCookie() {
			document.cookie = "_registration_data=;path=/;domain=.good.is;expires=Thu, 01-Jan-1970 00:00:01 GMT";
		}

		$(document).ready(function () {
			// Backbone Listeners
			window.user = new User(GOOD.user() || {});

			// Backbone listener for header sign-in/login
			if ($('.global-nav').length) {
				new LoginView({model: window.user}).render();
			}

			// Backbone listener for comments page
			if ($("#echo-comments").length) {
				window.comment_view = new CommentView({model: window.user});
			}

			// Backbone listener for magazine subscribe
			if ($('.primary-content').length) {
					window.view = new MagazineLoginView({model: window.user});
					$('.primary-content').append(window.view.render().el);
			}

			// For Sign-in in Header
			$('a[href="/login"]').each(function (i) {
				$(this).unbind().click(function (e) {
					e.preventDefault();
				}); 
			});

			$('a[href="/login"]').click( function() {
				deleteRedirectCookie();

				$.ajax({
					url: "/session/new", 
					dataType: "script"
				});

				//$("#registration-modal-box").load( "/session/new" );
			});

			// For Join in Header
			$('a[href="/users/signup"],a[href="/signup"]').each(function (i) {
				$(this).unbind().click(function (e) {
					e.preventDefault();
				}); 
			});

			$('a[href="/users/signup"],a[href="/signup"]').click( function() {
				deleteRedirectCookie();

				$.ajax({
					url: "/shared_users/new", 
					dataType: "script"
				});

				//$("#registration-modal-box").load( "/shared_users/new" );
			}); 

			// For Facebook in Header
			$('#customFBConnect').each(function (i) {
				$(this).unbind().click(function (e) {
					e.preventDefault();
				}); 
			});

			$('#customFBConnect').click( function() {
				deleteRedirectCookie();	 
				document.location.href = 'https://www.facebook.com/dialog/oauth?client_id=122966314909&response_type=token&scope=email&redirect_uri=' + document.location.href;
			});

			// For Magazine
			$('a[href="/users/login/member:2"]').each(function (i) {
				$(this).unbind().click(function (e) {
					e.preventDefault();
				}); 
			});

			$('a[href="/users/login/member:2"]').click( function() {
				deleteRedirectCookie();

				$.ajax({
					url: "/session/new", 
					dataType: "script"
				});

			//	$("#registration-modal-box").load( "/session/new" );
			}); 

			$('a[href="/users/signup/member:2"]').each(function (i) {
				$(this).unbind().click(function (e) {
					e.preventDefault();
				}); 
			});

			$('a[href="/users/signup/member:2"]').click( function() {
				deleteRedirectCookie();

				$.ajax({
					url: "/shared_users/new", 
					dataType: "script"
				});

			//	$("#registration-modal-box").load( "/shared_users/new" );
			});

			// For Gato
			if ( !GOOD.user() ) {
				$(".iamateacher a").each(function (i) {
					$(this).unbind().click(function (e) {
						e.preventDefault();
					}); 
				});

				$('.iamateacher a').click( function() {
					deleteRedirectCookie();
					$.ajax({
						url: "/session/new?data=redirect:/great-american-teach-off/nominate_teacher?teacher=true", 
						dataType: "script"
					});

					//$("#registration-modal-box").load( "/session/new?data=/great-american-teach-off/nominate_teacher?teacher=true" );
				}); 

				$(".nominateteacher a").each(function (i) {
					$(this).unbind().click(function (e) {
						e.preventDefault();
					}); 
				});

				$('.nominateteacher a').click( function() {
					deleteRedirectCookie();
						$.ajax({
						url: "/session/new?data=redirect:/great-american-teach-off/nominate_teacher?teacher=false", 
						dataType: "script"
					});

					//$("#registration-modal-box").load( "/session/new?data=/great-american-teach-off/nominate_teacher?teacher=false" );
				});
			}
		});
	</script>
</div>	</body>
</html>
