<script type="text/javascript">
	
	
	function BackButton(){
		this.element = document.createElement('a');
		this.element.setAttribute("href","javascript:void(0);");
		this.element.innerHTML='<span class="nav-back"><!--back--></span>';
		var t = this;
		this.clickHandler = function(){};
		
		this.element.onclick = function(e){t.clickHandler(e)};
		
		this.reset = function(){
			t.clickHandler = function(){ window.history.back();};
			if(document.referrer.search(/t/i)){
				t.show();
			}
			else{
				t.hide();
			}
		};
		this.show = function(){
			if(this.element.parentNode==null){
				var hl = document.getElementById('headerLeft');
				if(hl!=null){
					hl.insertBefore(t.element,hl.firstChild);
				}
			}
		};
		this.hide = function(){
			if(t.element.parentNode!=null){
				t.element.parentNode.removeChild(t.element);
			}
		}
		
		this.reset();
	};
	window.backButton = new BackButton();
</script>
