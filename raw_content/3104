function initPage(){
	window.mainScroll = new iScroll('recipe-wrapper');
	var wrap = document.getElementById('recipe-outer');
	tLinkRewrite(wrap);
	enableSave();
	enableShare();
	updatePage();
	updateSaveButton();
	document.getElementById('loader').style.display='none';
	document.getElementById('window').className="windowFade";
}

function updatePage() { 
	var wrap = document.getElementById('recipe-outer');
	var header = document.getElementById('header');
	var footer = document.getElementById('footer');
	document.body.style.width=window.innerWidth+"px";
	document.body.className='oof';
	var nh = (window.innerHeight - (header==null?0:header.clientHeight) - (footer==null?0:footer.clientHeight));
	wrap.style.height=nh+"px";
	
	if(window.mainScroll) {	
		window.mainScroll.refresh();
	}
	window.scrollTo(0,0);
	adjustLoaderPos();
} 
window.onresize=updatePage;
window.onorientationchange=updatePage;

function getBookmark(){
	var bm = new Object();
	bm.url = '\/GMA\/t\/recipe\/rachael-rays-spinach-artichoke-mac-cheese-15609915';
	bm.title= 'Rachael Ray\'s Spinach and Artichoke Mac and Cheese';
	
		bm.description = 'Two Favorite Foods Combine';
	
	
	bm.img =  '\/images\/Entertainment\/abcrachel_ray_spinach_artichoke_mac_cheese_thg_120216_wc.jpg';
	bm.width = '100';
	bm.height = '56';
	
	return bm;
}

