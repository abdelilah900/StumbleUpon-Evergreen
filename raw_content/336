			$form = $(".formexpanded");
			$formdisplay = $form.css("display");
			$href = $("#formToggle").attr("href");
			
			if($href == "#") {
				window.location.hash = 'reviews';
					if ($formdisplay == "none"){
				 		$form.slideDown("fast");
				 	}
					return false;		
				}
				else {
					document.location = $href;
				}				
			});
		}		
