function embedAjaxVideo(ajaxOptions) {
	var myVidInfo = {
			title : 'pcworld:' + ajaxOptions.vidTitle,
			playerId : ajaxOptions.id
	};
	attachOmniTrack(myVidInfo);

	var params = { allowfullscreen:'true', allowscriptaccess:'always', wmode:'opaque' };
	var attributes = { id:ajaxOptions.id, name:ajaxOptions.id };
	var flashvars = {
		ok:'ok',
		provider:'rtmp',
		streamer:'rtmp://flashstream.pcworld.com',
		file:ajaxOptions.file,
		autostart:'false',
		controlbar:'bottom',
		image:ajaxOptions.image,
		skin:'http://www.pcworld.com/video/pcworld.zip',
		'viral.allowmenu':'true',
		'viral.onpause':'false',
		'viral.functions':'link,embed',
		'allownetworking':'all'
	};
	flashvars.plugins='http://flash.pcworld.com/jw/tweetit-1.swf,http://flash.pcworld.com/jw/viral-2.swf,http://flash.pcworld.com/jw/fbit-1.swf';

	if ('true' == ajaxOptions.showPrerolls) {
		flashvars.plugins='http://flash.pcworld.com/jw/googima.swf,'+flashvars.plugins;
		flashvars['googima.admessagedynamic']='This ad will close in XX seconds';
		flashvars['googima.admessagedynamickey']='XX';
		flashvars['googima.click_tracking']='true';
		flashvars['googima.scaled_ads']='false';
		flashvars['googima.allowvolumeslider']='true';
		flashvars['googima.ad.pcw.tag']=ajaxOptions['googima.ad.pcw.tag'];
		flashvars['googima.ad.pcw.position']='pre';
		flashvars['googima.ad.pcw.bandwidth']='high';
	}

	swfobject.embedSWF('http://www.pcworld.com/video/player.swf',ajaxOptions.id,'426','270','9.0.115','false',flashvars, params, attributes, handleJWevents);

	function setOmniVars() {
		s.prop17=myVidInfo.title; //video name - source:name
		s.events="event1,event2,event10,event11";
		s.eVar27="1:M:0-"+jwplayer(myVidInfo.playerId).getDuration(); //segments
		s.eVar47=myVidInfo.title; //video name - source:name
	}

	function handleJWevents(e) {
		jwplayer(e.ref).onReady(function() {
			setOmniVars();
 			myVidInfo.omniTrack.isOpen = true;
		});
	    jwplayer(e.ref).onPlay(function() {
	    	setOmniVars();
	    	myVidInfo.omniTrack.omniEvents.push('n'+jwplayer(e.ref).getPosition());
	    	if (!myVidInfo.omniTrack.isOpen) {myVidInfo.omniTrack.isOpen = true;}
		});
	    jwplayer(e.ref).onPause(function() {
	    	setOmniVars();
	    	myVidInfo.omniTrack.omniEvents.push('y'+jwplayer(e.ref).getPosition());
	    });
		jwplayer(e.ref).onComplete(function() {
			setOmniVars();
			myVidInfo.omniTrack.isOpen = false;
		});
	}
}

function showVideoPlayer(videoId){
	document.write('<div id="inlinePlayerContainer' + videoId + '"></div><br clear="all" />');
	var inlineAid = "aid:245157";
	if ('' == inlineAid) {
		/* XXX: Fix for capsules */
		inlineAid = 'aid:';
	}
	$('#inlinePlayerContainer' + videoId).load('/inlineVideo/' + inlineAid + '/' + videoId + '.html');
}

