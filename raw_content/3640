								$("#viewsHelp").tooltip({
									showURL: false,
									extraClass: "tip"
								});
							});
							function transcriptSeek(t, headline) {
		$.GA_trackEvent('Interactive Transcript Click', 'Transcript:'+headline,'');
		seekVideo(t);
	}

	// this function will interface with the video player to seek to a specified time
	function seekVideo(t) {
		var videoSWF = document.getElementById('streamingPlayerSWF');
		if (videoSWF) {
			videoSWF.seekVideo(t);
		} else {
			t = t/1000 + 15.33;
			$('#videoPlayerSWF').html5_video_player('set_time', t);
		}
	}

	$(document).bind('sponsor_popover', function(event, payload) {
		$('#adSpace').sponsor_popover({payload: payload});
	});
	// this happens because the trafficked ad is not json.  Assume it's HTML and deliver it on-page.
	$(document).bind('sponsor_ad_error', function(event, payload) {
		$('#adSpace').html(payload.response);
	});

	/* **************************
	 *
	 *  Player Methods
	 *
	 *  *************************
	 */
	// this function called by the player when subtitles are swithed on
	function onPlayerLoadSubtitles(languageCode, shareURL) {
		$(document).trigger('shareURL', shareURL);
		if (languageCode != currentLanguageCode) {
			currentLanguageCode = languageCode;
			$.getJSON(
				'/talks/titles/id/' + talkID + '/lang/' + languageCode,
				function(data, textStatus, jqXHR) {
					$('#tagline').fadeOut(250, function() {
						$(this)
							.css('direction', data.response.isRTL ? 'rtl' : 'ltr')
							.css('text-align', data.response.isRTL ? 'right' : 'left')
							.html(data.response.tagline)
							.fadeIn(250);
					});
					$('#altHeadline').fadeOut(250, function() {
						$(this)
							.html(data.response.altheadline)
							.fadeIn(250);
					});
					$('#attributionText').fadeOut(250, function() {
						$(this)
							.html(data.response.attributionText)
							.fadeIn(250);
					});
				}
			)
			.error(function(jqXHR, textStatus, errorThrown) {
				console.log('Unable to retrieve titles for the specified language=' + textStatus + ' - ' + errorThrown);
			});
		}
	}
	function onPlayerToggleTranscript(toggle) {
		$("#transcript")['slide' + (toggle ? 'Down' : 'Up')]();
	}

	// this function called by the player when link to "display issues" clicked.
	function onPlayerSubtitleHelp() {
		window.open('/translate/subtitlehelp','','width=570,height=510,left='+(screen.availWidth/2-376)+',top='+(screen.availHeight/2-216)+'');
	}

	// the function called by the player to get container's URL
	function onPlayerGetContainerURL() {
		return document.location.href;
	}
	
	// called by the player when ready
	function onPlayerReady()
	{
		$(document).trigger('player_ready');
	}
	$('#html5_video').one('canplay', onPlayerReady);

	// This is a wrapper method which the player calls so that we can trigger an event.
	function onPageAd(data) {
		$(document).trigger(data.event, data.data);
	}
//]]></script>
</body>
</html>
