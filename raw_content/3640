		function trackLinkedIn() {
			$.trackAction('share', 'talks', '974');
			$.GA_trackSocial('linkedin', 'share', 'hans_rosling_the_good_news_of_the_decade', 'http://www.ted.com/talks/hans_rosling_the_good_news_of_the_decade.html');
		}
		function trackGooglePlus(obj) {
			if (obj.state == 'on') {
				$.trackAction('share', 'talks', '974');
				$.GA_trackSocial('google_plusone', 'share', 'hans_rosling_the_good_news_of_the_decade', 'http://www.ted.com/talks/hans_rosling_the_good_news_of_the_decade.html');
			}
		}
