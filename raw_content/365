(function(){
		function hasClassName (element, className) {
			if(!element) { return false; }
			return ((' ' + element.className + ' ').indexOf(' ' + className + ' ') != -1);
		}
		function findParentWithClass(el, className){
			var curEl = el, limit = 12;
