    <!-- google_ad_section_start -->
    <h1>30 Futuristic Phones We Wish Were Real</h1>
    <!-- google_ad_section_end -->
    
    <div class="post-meta">
    <!--INFOLINKS_OFF-->
      <p>By <strong>
		Dainis        </strong> | <strong> <span class="cat">
        <a href="http://www.hongkiat.com/blog/category/inspiration/" title="View all posts in Inspiration" rel="category tag">Inspiration</a>        </span> </strong> <span class="edit">
                </span></p>
    <!--INFOLINKS_ON-->    
    </div>
   
    <div id="SMBadge_Container">
      <div id="SMBadge_Box">
        <div id="SMBadges">
                   <div class="SMVote" onClick="javascript: pageTracker._trackPageview('/hkc/single/float/tweet');"><a href="http://twitter.com/share" class="twitter-share-button" data-count="vertical" data-via="hongkiat">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script></div>
          <div class="SMGap"></div>
          <div class="SMVote" onClick="javascript: pageTracker._trackPageview('/hkc/single/float/facebook');"><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="http%3A%2F%2Fwww.hongkiat.com%2Fblog%2F30-futuristic-phones-we-wish-were-real%2F" layout="box_count" show_faces="true" width="50"></fb:like></div>
          <div class="SMGap"></div>
          <div class="SMVote" onClick="javascript: pageTracker._trackPageview('/hkc/single/float/buzz');"><a title="Post on Google Buzz" class="google-buzz-button" href="http://www.google.com/buzz/post" data-button-style="normal-count"></a>
	      <script type="text/javascript" src="http://www.google.com/buzz/api/button.js"></script></div>
