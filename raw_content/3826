        var idx=0;
        $.ajax({
            url: KIDS.StageVars.momUrl + '/wp-content/themes/nickmom-blog-responsive/inc/partner-rss-feeds-div.php',
            dataType: 'jsonp',
            jsonp: 'callback', cache: true,jsonpCallback:'feedDivCallback',
            success: function(data){
                if ($.trim(data)) {
                    $('#partner-feeds-placeholder').replaceWith(data);
                    $('#partner-feeds').css('display', 'block');
                    $('#partner-feeds .rss-partner-feed').each(function(){
                        var feedDiv = $(this);
                        var rssFeedUrl = $(this).data('rss-feed-url');
                        var rssImageUrl = $(this).data('rss-image-url');
                        var rssImageLink = $(this).data('rss-image-link');
                        var rssImageTitle = $(this).data('rss-image-title');
                        var rssCount = $(this).data('rss-count');
    
                        if (!rssCount) {
                            // original wp nickmom; can be removed after relaunch
                            $.ajax({
                                type: 'jsonp',
                                url: KIDS.StageVars.momUrl + '/wp-content/themes/nickmom-blog-responsive/inc/partner-rss-feeds.php?rss-feed-url=' + rssFeedUrl + '&rss-image-url=' + rssImageUrl + '&rss-image-link=' + rssImageLink,
                                dataType: 'jsonp',
                                jsonp: 'callback',cache:true, jsonpCallback: 'feedCallBack'+(idx++),
                                success: function(html){
                                    $(feedDiv).html(html);
                                    // send tracking event when going to partner site
                                    $(feedDiv).find('.partner-block a').click(function(){
                                        var imageLink = $(feedDiv).find('.partner-block a img').parent().attr('href');
                                        KIDS.reporting.omnifunctions.sendAnalyticsEvent('','Click to ' + imageLink);
                                    });
                                }
                            });
                        } else {
                            var proxiedRssFeedUrl = KIDS.StageVars.momUrl + '/partner-feed.json?url=' + encodeURIComponent(rssFeedUrl);
                            $.ajax({
                                type: 'jsonp',
                                url : proxiedRssFeedUrl, 
                                dataType: 'jsonp text xml',
                                jsonp: 'callback',
                                cache:true,
                                jsonpCallback: 'feedCallBack'+(idx++),
                                success: function(data){
                                    var $xml = $(data);
                                    $(feedDiv).append('<div class="partner-block partner-image-block"><a href="' + rssImageLink + '" target="_blank"><img src="' + rssImageUrl + '" alt="' + escape(rssImageTitle) + '" /></a></div>');
    
                                    $xml.find("item, entry").each(function(index){
                                        if (index >= rssCount) {
                                            return false;
                                        }
                                        var $this = $(this);
                                        var title_text = $this.children("title").text();
                                        var href = $this.children("link").text();
                                        href = href ? href : $this.children("link").attr("href");
                                        href = href ? href : $this.children("comments").text().replace("#comments", "");
                                        $(feedDiv).append('<div class="partner-block"><a href="' + href + '" target="_blank" title="' + title_text + '">' + title_text + '</a></div>');
                                    });
    
                                    // send tracking event when going to partner site
                                    $(feedDiv).find('.partner-block a').live('click', function() {
                                        var imageLink = $(feedDiv).find('.partner-block a img').parent().attr('href');
                                        KIDS.reporting.omnifunctions.sendAnalyticsEvent('','Click to ' + imageLink);
                                    });
    
                                },
                                error: function(){ }
                            });
                        }
                    });
                }
            }
