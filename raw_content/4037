<script>

  var initMostViewedVideos = function() {
        function loadJson(data) {

          var jsonPrefix = data.splice(0, 5);
          var mostViewed = [];
          jQuery.each(jsonPrefix, function(key, val) {
            var headline  = val.webTitle,
                link      = val.webUrl,
                thumbnail = val.fields.thumbnail,
                mask      = '<img src="http://static.guim.co.uk/static/2c80c0573abe8ff1e40d570695607678c0b912b9/common/styles/images/video_140.png" width="140" height="84" alt="" class="mask">';

            (thumbnail !== undefined) ? thumbnail = '<img src="' + thumbnail + '" width="140" height="84">' + mask : thumbnail = '';

            mostViewed.push('<li class="l1 inline-pic"><a href="'+link+'" class="link-image">'+thumbnail+'<span class="most-view-text">'+headline+'</span></a></li>');
          });

          jQuery('<ul/>', {
            className: 'l1d',
            html: mostViewed.join('')
          }).appendTo('.most-pop-video .bd');

        }

        var urlQueried = 'http://video-dashboard.guardianapps.co.uk/api/most-viewed';

        
        
          if(jQuery('#promo.var-b').is(':visible')) {
              jQuery.ajax({
                url: urlQueried,
                cache: true,
                success: loadJson,
                dataType: 'jsonp',
                jsonpCallback: 'topvideocallback'
              });
          }
       
  };


</script>

