                var hasStorage = (function() {
                    try {
                        localStorage.setItem("xxx_localstorage_test", "xxx_localstorage_test");
                        localStorage.removeItem("xxx_localstorage_test");
                        return true;
                    } catch(e) {
                        return false;
                    }
