<script type="text/javascript">
  ars.ARTICLE = {"url":"http:\/\/arstechnica.com\/uncategorized\/2006\/10\/7908\/","short_url":"","title":"The Daily Show is as substantive as the \"real\" news","author":25862,"id":87944,"promoted":[]};
