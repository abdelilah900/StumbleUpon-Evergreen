jQuery(document).ready(function(){
theclass=jQuery("li.prev").attr("class");
if(theclass=="prev begin"){
jQuery("li.prev a").css("cursor","default");
}
theclass=jQuery("li.next").attr("class");
if(theclass=="next end"){
jQuery("li.next a").css("cursor","default");
}
theclass=jQuery("li.current").attr("class");
if(theclass=="current active"){
jQuery("li.current a").css("cursor","default");
}
}
);
