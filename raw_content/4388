<script>

    var _ghearst_vars = (function() {
    var metaKeyWords = (function(){
    var metaKeywordContent='';
    metaCollection = document.getElementsByTagName('meta');
    for (i=0;i<metaCollection.length;i++) {
        nameAttribute = metaCollection[i].name.search(/keywords/);
        if (nameAttribute!= -1) {
            metaKeywordContent = metaCollection[i].content;
            metaKeywordContent = metaKeywordContent.replace(/,/g,'%2C'); // to replace ,
            metaKeywordContent = metaKeywordContent.replace(/ /g,''); // to replace space
        }
    }
    return metaKeywordContent;
    })();
    return {
    'ams_ads_script_src': 'http://subscribe.newyorker.com/ams/page-ads.js?ad_category_prefix=online&browser_path=%2Fonline%2Fblogs%2Fcomment%2F2012%2F06%2Fsomething-wicked-this-way-comes.html&cat_prefixes=%2Conline%2Cblogs%2Ccomment%2C2012%2C06%2Csomething-wicked-this-way-comes.html&keywords='+metaKeyWords+'&position_list=AMS_NYR_POPUP_FLOATINGAD%2CAMS_NYR_GLOBAL_NAVBAR_ROLLOVER%2CAMS_NYR_GLOBAL_RIGHTRAIL_A%2CAMS_NYR_GLOBAL_EMBEDDEDFORM%2CAMS_NYR_GLOBAL_RIGHTRAIL_C%2CAMS_NYR_GLOBAL_RIGHTRAIL_B%2CAMS_NYR_GLOBAL_HEADER%2CAMS_NYR_GLOBAL_NAVBAR%2CAMS_NYR_GLOBAL_HEADERCALLOUT%2CAMS_NYR_CONTENTPAGE_TEXTOFFER&site_prefix=newyorker&subdomain=www&url_name=something-wicked-this-way-comes'
    };
    })();
    if (!window.$h) {window.$h = {}}(function(){
    if (!$h.util){$h.util = {
        buildScriptTag: function(src){
            if (!!src){
                document.write('<scr' + 'ipt src="'+src+'" language="javascript"></scr' + 'ipt>')
                }
            }
        }
    }
    $h.util.buildScriptTag(_ghearst_vars.ams_ads_script_src)})();

</script>



                
                
                
            
    

    
