        <div class="blurb">
            
            

            
            
                <div class="text"><script type="text/javascript">
  
// Load version 1 of the Feeds API
google.load("feeds", "1");
 
function OnLoad() {
   var feed = new google.feeds.Feed("http://www.newyorker.com/online/blogs/comment/rss.xml");
 
  // Set the number of entries to display
feed.setNumEntries(5)
 
// Our callback function, for when a feed is loaded.
function feedLoaded(result) {
   if (!result.error) {
     // Grab the container we will put the results into
    var container = document.getElementById("comment");
     container.innerHTML = '';
 
    // Loop through the feeds
      var rssOutput=""
       var thefeeds=result.feed.entries
     for (var i = 0; i < result.feed.entries.length; i++) {
       var entry = result.feed.entries[i];
       var div = document.createElement("div");
       
    // Format the date string
      var entrydate=new Date(thefeeds[i].publishedDate) //get date of entry
       var entryHours = entrydate.getHours ( );
       var entryMinutes = entrydate.getMinutes ( );
       entryMinutes = ( entryMinutes < 10 ? "0" : "" ) + entryMinutes;
       var timeOfDay = ( entryHours < 12 ) ? "AM" : "PM";
       entryHours = ( entryHours > 12 ) ? entryHours - 12 : entryHours;
       entryHours = ( entryHours == 0 ) ? 12 : entryHours;
       var entryTimeString = entryHours + ":" + entryMinutes + " " + timeOfDay;
 
      var entryDateString = document.createTextNode("");
      entryDateString = "(" + (entrydate.getMonth()+1)+"/"+entrydate.getDate()+" "+entryTimeString + ")"
        
   // Create the HTML of each item
        div.innerHTML = "<dd class='blurblink' style='margin-bottom:4px;font-size:12px;!important''><a href='" + thefeeds[i].link + "'><strong>" + thefeeds[i].author + ": </strong>" + thefeeds[i].title + "</a> <span style='font-family: irving, sans-serif;color:#7f7f7f;font-size:11px;!important'>" + entryDateString + "</span></dd>";
 
      container.appendChild(div);
     }
  }
 }


  // Calling load sends the request off.  It requires a callback function.
   feed.load(feedLoaded);
 }

google.setOnLoadCallback(OnLoad);
 </script>
