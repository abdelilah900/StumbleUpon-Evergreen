 function openBlock() {

	 var mapBlock = document.getElementById("all-box");

	 if(mapBlock.style.display = "none") {
 		mapBlock.style.display = "block";
	 }
 }

 function closeBlock() {

	 var mapBlock = document.getElementById("all-box");

 	if (mapBlock.style.display = "block") {
		 mapBlock.style.display = "none";
	 }
 }
