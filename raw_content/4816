	<script>
    $('.follow_block').bind("mouseleave", function(){
        closeFollowSubnav();
    });
    var followNavTimer;
    var visibleID;
    function openFollowSubnav(id){
            clearTimeout(followNavTimer);
            followNavTimer = setTimeout(function(){
                if(visibleID != id){
                    closeFollowSubnav();
                    $(id).slideDown();
                    visibleID = id;
                }
            }, 250);
    }
    function closeFollowSubnav(){
        visibleID = null;
        clearTimeout(followNavTimer);
        $("#follow-subnav > *:visible").stop(true, true).slideUp();
        //if this starts to bug out, use .hide() instead of slideUp()
    }
</script>

