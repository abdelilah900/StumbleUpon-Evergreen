function paramnewwindow(theLocation) {
        if (theWindow == null) {
                var theWindow=window.open(theLocation, 'footnotes', 'scrollbars=1,resizable=1,width=500,height=300');
                }
        theWindow.location.href=theLocation;
        theWindow.focus();
        }


function button(name) {
    this.hot        = new Image();
    this.hot.src    = "/library/img/button-"+name+"-hot.gif";
    this.cold       = new Image()
    this.cold.src   = "/library/img/button-"+name+"-cold.gif";
    }


function newbutton(name) {
    button[name]=new button(name);
    }


function navhot(name) {
    if (document.images) {
        document[name].src = button[name].hot.src;
        }
    }


function navcold(name) {
    if (document.images) {
        document[name].src = button[name].cold.src;
        }
    }


function back() {
    parent.history.back();
}



function init() {
    newbutton('library');
//    newbutton('courses');
//    newbutton('discussion');
    newbutton('about');
    newbutton('previous');
    newbutton('contents');
    newbutton('next');
    
    button['library'].cold.src=button['library'].hot.src;
//  button['contents'].cold.src=button['contents'].hot.src;
    
    }

if (document.images != null) init();

