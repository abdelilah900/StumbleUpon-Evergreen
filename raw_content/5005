                    var link = $(this);
                    if($(this).hasClass('ajaxArchive')) {
                        $(this).addClass('loading');
                        $(target).load($(this).attr('href'), function(){
                            $(this).slideToggle();
                            $(link).removeClass('loading');
                        });
                        $(this).removeClass('ajaxArchive');
                    } else {
                        $(target).slideToggle();
                    }
                    return false;
                });
				
