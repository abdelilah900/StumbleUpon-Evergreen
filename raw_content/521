											ThinBox.open('#facebookLoading',{width:250,height:150,_preventBlur:true});
											$.get("/ajax/loginbyfacebookid.aspx", {facebook_id: response.session.uid}, function(data){
												if (data.indexOf("Timeout expired") != -1) {
													alert("There was an error, please try again.");
													ThinBox.remove();
												} else if (data.indexOf("existing email found") != -1) {
													//$("#thinboxModalContent .FacebookLoginLoading").html("<p>The email address you use with Facebook is already registered with eHow.</p><p>Please login to eHow directly with this email address - you can still use Facebook features.</p><p><a class='Button3a' onclick='ThinBox.remove()';>Ok</a>");
													ThinBox.remove();
													ThinBox.open('/account/facebook_merge.aspx?error=duplicate_email&email='+data.split(':')[1]+'&fbid='+response.session.uid);
												} else {
													setTimeout("window.location.reload()",1000);
												}
											});
										}
									 }
								}, {perms:'email,user_interests'});
							});
						  }
