    $(document).ready(function() {
      var addthis_config = {"data_track_clickback":true, "data_ga_property":'UA-26124207-1', "data_ga_social":true};

      $("#facebookIcon").click(function(e){
        e.preventDefault();
        var url = "http://www.facebook.com/dialog/feed?";
        url += "app_id=180203961999951&";
        url += "link="+escape(document.location.href)+"&";
        var fb_name = encodeURI("Your Brain May Be Responsible for Your Biased Choices");
        url += "name="+fb_name+"&";
        url += "redirect_uri="+escape(document.location.href); // IMPORTANT: uris need to be escaped, instead of uriEncoded
        var myWindow=window.open(url, "facebook", "width=1000,height=440");
        myWindow.focus();
      });
    });
    
</script>
