					if (typeof insight != 'undefined' && insight) {
						for (name in insight) {
							var value;
							var list;
							if (!insight.hasOwnProperty(name))
								continue;
							list = insight[name];
							if (typeof insight[name] != 'object' ){
								list = new Array();
								list[list.length] = insight[name];
							}
							for (var i = 0; i < list.length; i++) {
								value = new String(list[i]);
								if (value.length > 0) {
									value = value.replace(/\s/g, '+');
									value = value.replace(/&/g, '%26');
									bt_data.push(bt_segments[name] + '=' + value);
								}
							}
						}
					}
					if (bt_data.length > 0) {
						if (OAS_query)
							OAS_query += '&';
						OAS_query += bt_data.join('&');
					}
					return OAS_query;
				} catch (e) {
					return;
				}
			}

		} catch(err) {
			// catch and release of fury
		}
