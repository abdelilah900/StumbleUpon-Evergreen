				var bt_segments = {
					'age_group' : 'a',
					'behavior' : 'b',
					'ethnicity' : 'e',
					'gender' : 'g',
					'income' : 'i',
					'marital' : 's',
					'neighborhood' : 'n',
					'persona' : 'p',
					'in_market' : 'im'};
				var bt_data = [];
