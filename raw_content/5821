<script>
	var phtArr;
	var pgReady = 0;
	var cPht = -2;
	var ifSaf = (navigator.userAgent.indexOf("WebKit")!=-1);
	var ifIsIE = (navigator.userAgent.indexOf("MSIE")!=-1);
	var ifIsIE7 = (navigator.userAgent.indexOf("MSIE 7")!=-1);
	var screenTx="<br/><br/><br/><br/><br/>Warning:<br/>This image may contain graphic or<br/>objectionable content<br/><br/>Click to view image"
