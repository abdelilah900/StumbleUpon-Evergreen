	var if_exp=new Date();
	var ifPhotos;
	var keyNav;

	function getEl(x){return(document.getElementById(x))}
	if_exp.setTime(if_exp.getTime()+(10*365*24*60*60*1000));
	function ifGetCval(offset){var endstr = document.cookie.indexOf (";",offset);if(endstr==-1){endstr=document.cookie.length};return unescape(document.cookie.substring(offset,endstr))}
	function ifGetC(name){var arg=name+"=";var alen=arg.length;var clen=document.cookie.length;var i=0;while (i<clen){var j=i+alen;if(document.cookie.substring(i,j)==arg){return ifGetCval (j)};i=document.cookie.indexOf(" ",i)+1;if(i==0){break}}return null}
	function ifSetC(name,value,expires,path,domain,secure){document.cookie=name+"="+escape(value)+((expires)?"; expires="+expires.toGMTString():"")+((path)?"; path="+path:"")+((domain)?"; domain="+domain:"")+((secure)?"; secure":"")}
	function ifDelC(name, path, domain) {document.cookie = name + "=" + ("; path=/") + ("; domain=theatlantic.com") + "; expires=Thu, 01-Jan-70 00:00:01 GMT";}

	function resSwap(x){
		 var currentDomain = "theatlantic.com";
		tmpCk = "";
		if(ifGetC("ifc")){
			tmpCk = ifGetC("ifc").split(".")[0];
		}
		if(x=="if10"){
			if(tmpCk!="0"){ifSetC("ifc","0.",if_exp,"/",currentDomain);window.location.reload();}
		}else{
			if(tmpCk!="1"){ifSetC("ifc","1.",if_exp,"/",currentDomain);window.location.reload();}
		}
	}

	function getEByCName(node, classname){
		tmpCk = "";
		if(ifGetC("ifc")){
			tmpCk = ifGetC("ifc").split(".")[0];
		}
		if(tmpCk=="1"){
			tmpId = "if1280";
		}else{
			tmpId = "if1024";
		}
	    var tmpRe = new RegExp('\\b' + classname + '\\b'); var tmpA = [];
	    var tmpElms = node.getElementsByTagName("*");
	    for(var i=0,j=tmpElms.length; i<j; i++)
	        if(tmpRe.test(tmpElms[i].className)){
	        	if((tmpElms[i].parentNode.parentNode.className == tmpId)||(tmpElms[i].parentNode.parentNode.parentNode.className == tmpId)){
	        		tmpA.push(tmpElms[i])
	        	}
	        }
	    return tmpA;
	}

	var ifOffsetEx = 108;
	var ifOffset2Ex = 254;
	var ifOffset = ifOffsetEx;
	var ifOffset2 = ifOffset2Ex;
	document.onkeypress = function(e){
		if(!e) e=window.event;
		kk = e.keyCode ? e.keyCode : e.which;
		if(((kk==107)||(kk==37))&&(keyNav)){
			adbAdj();
			if(cPht>0){
				cPht--;
				if(ifIsIE7){
					window.scrollTo(0,(ifPhotos[cPht].offsetTop + ifPhotos[cPht].parentNode.offsetTop)+ifOffset);
				}else{
					window.scrollTo(0,ifPhotos[cPht].offsetTop+ifOffset);
				}
			}else{
				if(cPht==0){
					cPht--;
					window.scrollTo(0,ifOffset2)
				}else{
					if(cPht<0){ window.scrollTo(0,ifOffset2); }
				}
			}
			e.cancelBubble = true;
			if (e.stopPropagation) e.stopPropagation();
		}
		if(((kk==106)||(kk==39))&&(keyNav)){
			adbAdj();
			if(cPht<ifPhotos.length-1){
				cPht++;
				if(cPht==-1){window.scrollTo(0,ifOffset2)}
				else{
					if(ifIsIE7){
						window.scrollTo(0,(ifPhotos[cPht].offsetTop + ifPhotos[cPht].parentNode.offsetTop)+ifOffset);
					}else{
						window.scrollTo(0,ifPhotos[cPht].offsetTop+ifOffset)
					}
				}
			}else{
				if(cPht==ifPhotos.length-1){
					if(ifIsIE7){
						window.scrollTo(0,(ifPhotos[ifPhotos.length-1].offsetTop + ifPhotos[ifPhotos.length-1].parentNode.offsetTop)+ifOffset);
					}else{
						window.scrollTo(0,ifPhotos[ifPhotos.length-1].offsetTop+ifOffset)
					}
				}
			}
			e.cancelBubble = true;
			if (e.stopPropagation) e.stopPropagation();
		}
	}

	if((ifSaf)||(ifIsIE)){
		document.onkeydown = function(e){
			if(!e) e=window.event;
			if(ifSaf){
				kk = e.charCode ? e.charCode : e.which;
			}else{
				kk = e.keyCode ? e.keyCode : e.which;
			}
			if(kk==37 && keyNav){
				adbAdj();
				if(cPht>0){
					cPht--;
					if(ifIsIE7){
						window.scrollTo(0,(ifPhotos[cPht].offsetTop + ifPhotos[cPht].parentNode.offsetTop)+ifOffset);
