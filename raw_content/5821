$(document).ready(function() {

function resizeOutbrain(width, tries) {
    if (!tries) {
        tries = 0;
    }
    if (!$('.outbrain_column').length && tries < 10) {
        setTimeout(function() {
            resizeOutbrain(width, tries+1);
        });
    } else {
        $('.outbrain_column').css('width', width + 'px');
    }
}

Atlantic.getAdSize('bottomboxleft', function(status, w, h) {
    if (status == 'success') {
        $('.adBottomboxleft').css('width', w + 'px');
        $('.adBottomboxleft').css('height', h + 'px');
	var availableWidth = $("#btTd").width() - w;
        if (availableWidth > 613) {
            resizeOutbrain(590);
            $('.adBottomboxleft').css('margin-left', '23px');
        } else if (availableWidth < 223) {
            $('#outbrainWrapper').hide();
        } else{
            resizeOutbrain(availableWidth-23);
            $('.adBottomboxleft').css('margin-left', '23px');
	}
    }else{
	resizeOutbrain(590);
        $('.adBottomboxleft').css('margin-left', '23px');
    }
    
});
});

//]]>
</script>

