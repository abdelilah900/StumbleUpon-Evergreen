							window.scrollTo(0,(ifPhotos[ifPhotos.length-1].offsetTop + ifPhotos[ifPhotos.length-1].parentNode.offsetTop)+ifOffset);
						}else{
							window.scrollTo(0,ifPhotos[ifPhotos.length-1].offsetTop+ifOffset)
						}
					}
				}
				e.cancelBubble = true;
				if (e.stopPropagation) e.stopPropagation();
			}
		}
	}


	function adbAdj(){
		var tmpADHt = getEl("adHeaderCirc").offsetHeight;
		if(tmpADHt>0){tmpADHt+=5};
		ifOffset = (ifOffsetEx + tmpADHt);
		ifOffset2 = (ifOffset2Ex + tmpADHt);
	}

	 $(document).ready(function() {
		var scrnImgs = getEByCName(document.body,"IfScreen");
		for(i=0;i<scrnImgs.length;i++){
			scrnImgs[i].innerHTML=screenTx;
		}
		scrnImgs = getEByCName(document.body,"IfScreenN");
		for(i=0;i<scrnImgs.length;i++){
			scrnImgs[i].innerHTML=screenTxN;
		}
		ifPhotos = getEByCName(document.body,"ifImg")
		keyNav = 1;
		document.getElementById("query").onkeypress = function(e){
			keyNav = 0;
		}
		tmpCk = "";
		if(ifGetC("ifc")){tmpCk = ifGetC("ifc").split(".")[0]}
		if(tmpCk == "1"){getEl("if12").checked="true"}
		var tmpADHt = getEl("adHeaderCirc").offsetHeight;
		if(tmpADHt>0){tmpADHt+=5};
		ifOffset = (ifOffsetEx + tmpADHt);
		ifOffset2 = (ifOffset2Ex + tmpADHt);
	// for jquery select boxes
	$("SELECT[name=destination]").selectBox({"autoWidth": false});
	if($.browser.msie){
          //attempt to fix google translate widget in IE
          setTimeout('$(".goog-te-menu-value span:last-child").css("color","#BF0000")',2000);
	  $(".selectBox").css("width","116px");
	}       

	});

	if(ifGetC("ifc")){
		if(ifGetC("ifc") == "1."){
			document.write('<style> #topAds{width:995px;padding-right:256px} #header #headerRight{padding-right:256px;} #menu{padding-right:256px;} #container{width:1251px;} .middle{width:1251px;} .ifWrp{width:1251px;} .imgCap{width:1180px;} .firstImg{width:1230px;} .noIfScreen{width:1247px} .IfScreen{width:1247px}	.IfScreenN{width:1247px} .if1024{display:none;} .if1280{display:inline;} #ifLatest{width:1175px;} .entry_body{width:901px;} #disqus_thread {width:820px;} #btTab{width:1247px;} .dsq-brlink{width:820px;}</style>');
		}
	}

	function ifUrlGo(x){
	  var dest = x.options[x.selectedIndex].value;
	  if ((x.selectedIndex!=0) && ((dest != null) && (dest != "") )){window.top.location.href = dest}
	}
	
	function todaysDate() {
		var d=new Date();
		var weekday=new Array("Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday");
		var month=new Array("January","February","March","April","May","June","July","August","September","October","November","December");	
		document.write(weekday[d.getDay()] + ', ' + month[d.getMonth()] + ' ' + d.getDate() + ', ' + d.getFullYear());
	}
	

</script>

