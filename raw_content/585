<script type="text/javascript">

    var getCookie=function(c){
        if(document.cookie.length>0){
            c_start=document.cookie.indexOf(c+"=");
            if(c_start!=-1){
                c_start=c_start+c.length+1;
                c_end=document.cookie.indexOf(";",c_start);
                if(c_end==-1)c_end=document.cookie.length;
                return unescape(document.cookie.substring(c_start,c_end));
            }
        }
        return false;
    }

    var dynamicNavObj = {
        userDataCookie: 'carecards_user_cache',
        divTemp: 'care2_loginlinks',
        divLoggedIn: 'care2_loginlinks_loggedin',
        divLoggedOut: 'care2_loginlinks_loggedout',
        divFirstname: 'care2_loginlinks_firstname',
        divEmail: 'care2_loginlinks_email',
        divMessages: 'care2_loginlinks_messages',
        divCredits: 'nav_bar-credit_count',
        loginLink: 'care2_login_link',
        logoffLink: 'care2_logoff_link',
        ajaxRefresh: false,
        intvlLimit: 4,
        intvlInt: 0,
        checkLoginCache: function() {
            var loginCache = getCookie(this.userDataCookie);

            if (typeof loginCache == "string" && loginCache != "false") {
                var resp = eval("("+eval("String.fromCharCode("+loginCache+")")+")");
                this.placeValues(resp);
            } else {
                this.ajaxRefresh = true;
            }
        },
        placeValues: function(loggedIn) {
            if(loggedIn == "false" || !loggedIn) {
                document.getElementById(dynamicNavObj.divTemp).style.display = "none";
                document.getElementById(dynamicNavObj.divLoggedIn).style.display = "none";
                document.getElementById(dynamicNavObj.divLoggedOut).style.display = "inline";
                if(document.getElementById(dynamicNavObj.loginLink).href.indexOf("?pg=") < 0) {
                    document.getElementById(dynamicNavObj.loginLink).href += "?pg="+escape(location.href);
                }
                return;
            }

            document.getElementById(dynamicNavObj.divTemp).style.display = "none";
            document.getElementById(dynamicNavObj.divLoggedOut).style.display = "none";
            document.getElementById(dynamicNavObj.divLoggedIn).style.display = "inline";

            var curTime = Math.round(new Date().getTime() / 1000);
            
            loggedIn.email_count = (loggedIn.email_count == "0") ? "" : loggedIn.email_count + " ";
            loggedIn.pm_count = (loggedIn.pm_count == "0") ? "" : loggedIn.pm_count + " ";

            document.getElementById(this.divEmail).innerHTML = loggedIn.email_count;
            document.getElementById(this.divMessages).innerHTML = loggedIn.pm_count;
            document.getElementById(this.divCredits).innerHTML = loggedIn.credit_count;

            if(loggedIn.timestamp < curTime - (60*5) || typeof loggedIn.email_count == "undefined") {
                this.ajaxRefresh=true;
            }

            document.getElementById(this.divFirstname).innerHTML = loggedIn.firstname;
        }
    }

    dynamicNavObj.intvl = setInterval(function() {
        var cookie = getCookie(dynamicNavObj.userDataCookie);

        if(cookie) {
            dynamicNavObj.checkLoginCache();
            dynamicNavObj.intvlInt = dynamicNavObj.intvlLimit;
        }

        if(dynamicNavObj.intvlInt >= dynamicNavObj.intvlLimit) {
            clearInterval(dynamicNavObj.intvl);
            if(document.getElementById(dynamicNavObj.divTemp).style.display != "none") {
                dynamicNavObj.placeValues(false);
            }
        }

        dynamicNavObj.intvlInt++;
    }, 250);

</script>
