CARE2.expandBio = function(id) {
        var obj = {
            shortBio: $(id+'_short'),
            fullBio: $(id+'_full'),
            moreLink: $(id+'_expand'),
            lessLink: $(id+'_collapse')
        }

        obj.expandBio = function(e, obj) {
            if(obj.fullBio.style.display == "none") {
                var fade = new YAHOO.util.Anim(obj.shortBio, {opacity: {to: 0}}, .4);
                var expand = new YAHOO.util.Anim(obj.fullBio, {height: {from: 0, to: obj.fullHeight}}, .5);
                fade.onComplete.subscribe(function(){
                    obj.shortBio.style.display = 'none';
                    obj.fullBio.style.height = 0;
                    obj.fullBio.style.overflow = 'hidden';
                    obj.fullBio.style.display = 'block';
                    expand.animate();
                });

                fade.animate();
            }
        }

        obj.collapseBio = function(e, obj) {
            if(obj.shortBio.style.display == "none") {
                var expand = new YAHOO.util.Anim(obj.fullBio, {height: {from: obj.fullHeight, to: 0}}, .5);
                var fade = new YAHOO.util.Anim(obj.shortBio, {opacity: {to: 1}}, .4);
                expand.onComplete.subscribe(function(){
                    obj.fullBio.style.display = 'none';
                    CARE2.setOpacity(obj.shortBio, 0);
                    obj.shortBio.style.display = 'block';
                    fade.animate();
                });

                expand.animate();
            }
        }

        obj.fullBio.style.cssText = "visibility: hidden; display: block;";
        obj.fullHeight = obj.fullBio.offsetHeight;
        obj.fullBio.style.cssText = "visibility: visible; display: none;";

        obj.moreLink.onclick = obj.lessLink.onclick = function() { this.blur(); return false; }
        YAHOO.util.Event.addListener(obj.moreLink, 'click', obj.expandBio, obj);
        YAHOO.util.Event.addListener(obj.lessLink, 'click', obj.collapseBio, obj);
    }

    CARE2.expandBio('cause_author_bio');
