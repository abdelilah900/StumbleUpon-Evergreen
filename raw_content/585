function adopt(anchor, url) {
    var pg_binding = 'pg=' + encodeURIComponent(window.location);
    url += (url.indexOf('?') < 0 ? '?' : '&') + pg_binding;
    var repostless_login = "http://www.care2.com/passport/login.html?promoID=1&pg="+encodeURIComponent(url);
    if(true) {
        window.location = repostless_login;
        return false;
    }
    var onclick = anchor.onclick;
    anchor.onclick = function () { return false; }
    var html = anchor.innerHTML;
    while(anchor.firstChild) anchor.removeChild(anchor.firstChild);
    anchor.appendChild(document.createTextNode('Adding...'));
    YAHOO.util.Connect.initHeader('Accept', 'application/xml');
    var trans = YAHOO.util.Connect.asyncRequest('POST', url, {
        timeout: 15000,
        success: function (xmlHttp) {
            while(anchor.firstChild) anchor.removeChild(anchor.firstChild);
            anchor.appendChild(document.createTextNode(xmlHttp.responseText.replace(/(<([^>]+)>)/ig,'').trim() || ''));
            setTimeout(function () { window.location.reload(true); },
                       3000);
        },
        failure: function (xmlHttp) {
            var redir = xmlHttp.getResponseHeader['Location'] || respostless_login;
            if (xmlHttp.status == 302 && redir) {
                // probably a login url w/ pg parameter set
                window.location = redir;
                return;
            }

            alert('Could not add this tag to your profile.');
            anchor.onclick = onclick;
            while(anchor.firstChild) anchor.removeChild(anchor.firstChild);
            anchor.appendChild(document.createTextNode(html));
        }
    },
    // trigger repost feature of parse_session_cookie
    pg_binding);
    return false;
}
