function adjustStyle(width) {
    width = parseInt(width);
    if (width > 1100) {
        $("#horizontalsocial").hide();
		$("#floating-box").show();
		$(".singleinfo").show();
    } else {
       $("#floating-box").hide();
	   $("#horizontalsocial").show();
	   $(".singleinfo").show();
    }
}

$(function() {
    adjustStyle($(this).width());
    $(window).resize(function() {
        adjustStyle($(this).width());
    });
});

</script>

