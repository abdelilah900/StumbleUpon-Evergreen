		<script>
			OAS_url = 'http://oas.guardian.co.uk/RealMedia/ads/';
			OAS_sitepage = "www.guardian.co.uk/fashion/gallery/2012/may/15/ballwgown-british-glamour-v-a-in-pictures/oas.html";
			OAS_listpos = 'Top';

						OAS_query = 'k=museums&k=design&k=dresses&k=v-and-a&k=fashion&cf=fashion+and+beauty&pid=&ct=gallery&pt=gallery&';
			OAS_target = '_blank';

			OAS_rn = '001234567890';
			OAS_rns = '1234567890';
			OAS_rn = new String (Math.random());
			OAS_rns = OAS_rn.substring (2, 11);

            // Add segments from rev_sci cookie to OAS_query.
            OAS_query += (function() {
                var maxSegs = 100;
                var rsi_segs = [];
                var cookies = document.cookie;
                var start = cookies.indexOf('rsi_segs=');
                var end;

                if (start >= 0) {
                    start = cookies.indexOf('=', start) + 1;
                    if (start > 0) {
                        end = cookies.indexOf(';', start);
                        if (end == -1) { end = cookies.length; }
                    }

                    var tmp_segs = cookies.substring(start, end).split(/E0/);
                    for (var i = 0, j = tmp_segs.length; i < j; i++) {
                        if (tmp_segs[i]) { rsi_segs.push('E0' + tmp_segs[i]); }
                    }
                    rsi_segs = rsi_segs.slice(0, maxSegs);
                }
                var retSegs = 'a=' + rsi_segs.join('&a=') + '&';
                try {
                    localStorage.setItem('aparams', retSegs)
                } catch(er) {
                    // Ignore
                }
                return retSegs;
            })();
		</script>
            	    





		
										

        		
		
			            						
										
					
                                                                                                                                                                                                                            
