        <script type="text/javascript">
            (function(){
                
                var google_ads = typeof gg_ads !== 'undefined' ? gg_ads : [],
                    google_num_ads = google_ads.length,
                    ads_per_unit = 2,
                    isImage = false,
                    open, close, index, ads, start, output, end, adElements, i;

                if (google_num_ads == 0){
                    open = '';
                    close = '';
                } else if (google_ads[0].type == "image") {
                    isImage = true;
                    ads_per_unit = 1;
                    open = '<div class="image-ad"><h3 class="ad-heading-div"><a class="ad-by-google" href="'+google_info.feedback_url+'">Ads by Google</a></h3>'
                    close = '</div>'
                } else {
                    open = '<div class="text-ad"><h3 class="ad-heading-div"><a class="ad-by-google" href="'+google_info.feedback_url+'">Ads  by Google</a></h3>'
                    close = '</div>'
                }

                adElements = getElementsByClass('afc-ad', 'div');
                
                for ( index = 0; index < adElements.length; index++) {
                    output = open;
                    start = ads_per_unit * index + (index == 0 ? 0 : 0);
                    end = ads_per_unit * (index + 1) + 0;
                
                    if (start >= google_num_ads){
                        adElements[index].style.display = 'none';
                    } else {
                        ads = google_ads.slice(start, end);
                        for (i = 0; i < ads.length; i++ ){
                            if ((i + 1) == ads.length){
                                output += render_ad(ads[i], true);
                            } else {
                                output += render_ad(ads[i], false);
                            };
                        }
                        output += close;
                        adElements[index].innerHTML = output;
                    }
                }

                // $(".afc-ad").each(function(index){
