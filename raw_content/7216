                var currentLink = jQ(this).attr('href');

                if (currentLink.indexOf('intcmp=') == -1) {
                    if(currentLink.indexOf('?') == -1) {
                        var separator = '?'
                    } else {
                        var separator = '&'
                    }

                    jQ(this).attr('href', currentLink + separator + "intcmp=" + cpId);
                }
            });
        });
    });
}
</script> 

