            (function($, jQuery) {
                if (typeof(pluckAppProxy.pluck_comments_submit_reply_display) === 'undefined') {
                    pluckAppProxy.pluck_comments_submit_reply_display = function(reply, comment_top) {
                        if ($.pluckDisplayCorners() && !reply.hasClass("pluckShown")) {
                            reply.addClass("pluckShown");
                            var allCorners = { tl: { radius: 5 }, tr: { radius: 5 }, bl: { radius: 5 }, br: { radius: 5 }, antiAlias: true, autoPad: false, validTags: ["div"] };
                            $("#" + reply.attr("id") + " > div.pluck-comm-input-content > div.pluck-comm-input-rounded-wrap").pluckCorner(allCorners);
                        }

                        var rpos = $(".pluck-comm-comment-content", comment_top);
                        var replyposition = rpos.position();
                        var replyoffsetX = 50;

                        var showHide = $(".pluck-comm-show-hide-replies", comment_top);
                        if (showHide.length > 0) {
                            showHide.before(reply);
                        } else {
                            reply.appendTo(comment_top);
                        }
                        /*** METRO EDIT
                        * reply.css('margin-left', replyposition.left + replyoffsetX);
                        ***/
                        pluckAppProxy.fadeIn(reply, function() {
                            $('textarea', reply).focus();
                        });
