<script>
jQuery.event.add(window, "resize", resizeFrame);
jQuery.event.add(window, "scroll", reposition);

$(document).ready(function() {
    $('div#enote_clip').mousedown(function(){
       var selected_text = getSelected();
       doEvernoteClip(selected_text);
       return false; 
    });
});

var startpos;
var startpos2;



function posinitiator() {
	var offset = $("#incsharebox").offset();
	startpos = offset.top;
}

function resizeFrame()
{
    var w = $(window).width();
    $("#incsharebox").css('float',(w < 1150) ? 'right' : 'left');
    $("#incsharebox").css('margin-left',(w < 1150) ? '8px' : '-96px');
    $("#incsharebox").css('border-color',(w < 1150) ? '#EEEEEE' : '#CCCCCC');
    $("#incsharebox").css('margin-bottom',(w < 1150) ? '0px' : '-355px;');
    reposition();
}

function reposition()
{
	var s = $(window).scrollTop();
	var w = $(window).width();

	if(w>1149) {
		$("#incsharebox").css('position',(s>startpos) ? 'fixed' : 'relative');
		$("#incsharebox").css('left',(s>startpos) ? '50%' : '0px');
		$("#incsharebox").css('top',(s>startpos) ? '0px' : '0px');
		$("#incsharebox").css('margin-left',(s>startpos) ? '-575px' : '-96px');
	} else {
		$("#incsharebox").css('position','relative');
		$("#incsharebox").css('left','0px');
	}

}

/*
 * NOTE - this function is faster but DOES NOT include selected HTML
 *
function getSelected() {
    if(window.getSelection) { return window.getSelection(); }
        else if(document.getSelection) { return document.getSelection(); }
        else {
             var selection = document.selection && document.selection.createRange();
            if(selection.text) { return selection.text; }
            return false;
        }
    return false;
}
*/

function getSelected() {
    var html = "";
    if (typeof window.getSelection != "undefined") {
        var sel = window.getSelection();
        if (sel.rangeCount) {
            var container = document.createElement("div");
            for (var i = 0, len = sel.rangeCount; i < len; ++i) {
                container.appendChild(sel.getRangeAt(i).cloneContents());
            }
            html = container.innerHTML;
        }
    } else if (typeof document.selection != "undefined") {
        if (document.selection.type == "Text") {
            html = document.selection.createRange().htmlText;
        }
    }
        
    html = html.replace(/&nbsp;/g," ");
    //console.log(html);
    
    return html;
}

function doEvernoteClip(selectedtext){
        var my_title = "How to Refresh Your Brain--in 10 Minutes";
        my_title = escape(my_title);
        var article_id = 46276;
        //alert(selectedtext);
        $('#clipper_button').fadeTo('slow', 0.5, function() {
          // Animation complete.
          $('.clip_confirm').slideDown(300).delay(3000).slideUp(300);
        });
        console.log(my_title);
	enoteArticleClip('perform=articleClip&clipTitle=' + my_title + '&clipArticleId=' + encodeURI(article_id) + '&clipSelection=' + selectedtext);
}

function enoteArticleClip(params) {

    var request = new XMLHttpRequest();
    request.onreadystatechange=function(){
	console.log(request.responseText);
        if (request.readyState==4){
            //postflag = false;
            if (request.status==200 || window.location.href.indexOf("http")==-1){
				
		//console.log(request.responseText);
				
                var x = parseInt(request.responseText);
                if (x == 0) {
                    // SUCCESSFUL CLIP
                    
                    // Visual alert to user that something has happened (CLIPPER BUTTON FADES)
                    //$('div#clipper_button').css('background','url(\'http://www.inc.com/images/evernote_clip_sprite.png\') 0 -49px no-repeat');
                    $('#clipper_button').fadeTo('slow', 1.0, function() {
                        // Animation complete.
                    });
                    
                    // Visual alert to user that something has happened (CLIPPED APPEARS AND DISSAPEARS)
                    /*
                    $("body").append("<div id='good_clip' style='background:#fff;display:none;position:fixed;top:50%;left:50%;'><h2>CLIPPED</h2></div>");
                    
                    $("#good_clip").fadeIn('slow', function() {
                            // Animation complete
                            $("#good_clip").fadeOut('slow', function(){
                               $("#good_clip").remove();
                            });
                    
                    });*/
                                        
                }
                else if (x == 4) {
                    // USER IS LOGGED IN TO INC but NO Evernote Credentials available
                    $('div#enote_clip').tooltip({position: 'center right',relative:true});
                    $('div#enote_clip').mouseover();
                    $('div.enote_tooltip #connect').css('display','block');
                }
                else if (x == 3) {
                    // USER IS NOT LOGGED IN TO INC BY ANY MEANS
                    $('div#enote_clip').tooltip({position: 'center right',relative:true});
                    $('div#enote_clip').mouseover();
                    $('div.enote_tooltip #login').css('display','block');
                }
                else if (x == 1) {
                    alert('Sorry, there was a problem - 1');
                    
                    // This will pop open the tooltip alerting the user about signup...needs to be somewhere here if we get erroneous callback from Evernote via oAuth
                    $('div#enote_clip').tooltip({position: 'center right',relative:true});
                    $('div#enote_clip').mouseover();
                }
                else if (x == 2) {
                    alert('Sorry, there was a problem - 2');
                    
                    // This will pop open the tooltip alerting the user about signup...needs to be somewhere here if we get erroneous callback from Evernote via oAuth
                    $('div#enote_clip').tooltip({position: 'center right',relative:true});
                    $('div#enote_clip').mouseover();
                }else{
                	alert('no idea');
                }
            }
            else{
                errorlog = '';
                //alert('An error has occured making the request.<br /><br />Please check your connection status, and try again in a moment.');
            }
        }
    }

    request.open("POST", "http://www.inc.com/enote_sample.php?perform=articleClip", true);
    request.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
    //request.overrideMimeType('text/javascript');
    request.send(params);
}


