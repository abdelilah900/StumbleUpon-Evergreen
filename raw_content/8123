  .m-zeitgeist #most-zeitgeist ol li.footer { border-top:1px dotted #999; padding: 5px 0 9px 10px; margin-left: 5px }  
  .m-zeitgeist #most-zeitgeist .m-zeigeist ol { padding-left: 0}
  
