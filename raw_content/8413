pluckAppProxy.onInit(function() {
pluckAppProxy.registerActivityCallback("FBConnectButtonRendered", function() {
$LAB.script("http://s.mirror.co.uk/resources/js/tm.personalisation.js")
.script("http://s.mirror.co.uk/resources/js/tm.uuid.js")
.script("http://s.mirror.co.uk/resources/js/tm.cookie.js")
.wait(function(){
var isLoggedIn = $().personalisation("isLoggedIn");
$(".pluck-login-withFacebook").each(function() {
/* When we are hiding when logged in we add data to the div used with the login to indicate this.
This is so that other components, namely the Comments form that can cause a log on know whether they
should hide the Facebook Login button after logging in. */
$(this).data("hideWhenLoggedIn", true);
// If we are logged in now hide.
if (isLoggedIn) {
$(this).hide();
}
});
});
});
});
//]]>
</script>
