			{'id':'sno3','len':6}
		];
	</script>
	



	
	










	 <!-- storyCarousel -->
	 <script type="text/javascript">
	 	function storyCarousel_initCallback(carousel) {
	 		jQuery('.carouselNav a').bind('click', function() {
		    	var myClass = jQuery(this).attr('class');
		    	if(myClass.indexOf("thumb")!=-1){
		    		var index = myClass.substring(myClass.length-1);
		        	carousel.scroll(jQuery.jcarousel.intval(index));
		        } else if(myClass.indexOf("next")!=-1){
			        	carousel.next();
		        } else {
			        	carousel.prev();
		        }
		        return false;
		    });
		};
	
		function storyCarousel_init(){
			if(jQuery("#storyCarousel").parent().is(":visible")){
				jQuery("#storyCarousel").show(1,function(){
					jQuery("#storyCarousel #contentPanel").jcarousel({
		        		scroll: 6,
		        		visible:6,
		        		initCallback: storyCarousel_initCallback,
		        		buttonNextHTML: null,
		        		buttonPrevHTML: null
		    		});
				});
		    } else {
		    	setTimeout(storyCarousel_init,100);
		    }		
		}
	
		jQuery(document).ready(function() {
				setTimeout(storyCarousel_init,500);
		});
	
	 </script>
	
	
