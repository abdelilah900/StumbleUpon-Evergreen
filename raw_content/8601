	if(_which=="pinterest"){
		sURL = "http://pinterest.com/LifestyleMirror/";
	}
	if(_which=="youtube"){
		sURL = "http://www.youtube.com/user/lifestylemirror";
	}
	if(_which=="tumblr"){
		sURL = "http://lifestylemirror.tumblr.com/";
	}
	if(_which=="instagram"){
		sURL = "http://statigr.am/lifestylemirror";
	}
        eval('window.open("'+sURL+'","smwin","left=200,top=200,width=900,height=600,toolbar=1,resizable=0")');
}
</script>

