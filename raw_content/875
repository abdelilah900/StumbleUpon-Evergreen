function debug_log(thing) {
  var debug_console = 0;
  if (debug_console) {
    if (typeof console != 'undefined') {
      console.log(thing);
    }
    else {
      setTimeout('throw new Error(\'' + thing + '\')', 0);
    }
  }
}
Drupal.behaviors.GABehavior = function(context) {
  /* init external tracking links */
  var gaprefix = '/news/2009/06/8187/obesity-and-metabolic-syndrome-driven-fructose-sugar-diet';
  var gaurls = eval('({"http:\/\/dentistry.ucsf.edu":"school_dentistry","http:\/\/dentistry.ucsf.edu\/patient-services":"find_dentist","http:\/\/dentistry.ucsf.edu\/patients\/patients_main.html":"find_dentist","http:\/\/finaid.ucsf.edu":"financial_aid","http:\/\/graduate.ucsf.edu":"grad_div","http:\/\/medschool.ucsf.edu":"school_medicine","http:\/\/medschool2.ucsf.edu":"school_medicine","http:\/\/medschool2.ucsf.edu\/":"school_medicine","http:\/\/nurseweb.ucsf.edu":"school_nursing","http:\/\/nurseweb.ucsf.edu\/index.shtml":"school_nursing","http:\/\/pharmacy.ucsf.edu":"school_pharmacy","http:\/\/registrar.ucsf.edu":"office_registrar","http:\/\/registrar.ucsf.edu\/registration\/fees":"fees_tuition","http:\/\/www.ucsfhealth.org":"medical_center","http:\/\/www.ucsfhealth.org\/appointments":"request_appointment","http:\/\/www.ucsfhealth.org\/conditions\/all.html":"conditions_treatments","http:\/\/www.ucsfhealth.org\/directory\/A.html":"doctor_staff_directory","http:\/\/www.ucsfhealth.org\/doctors_and_clinics":"find_doctor","https:\/\/makeagift.ucsf.edu\/*":"giving","https:\/\/registrar.ucsf.edu\/registration\/fees":"fees_tuition"})');
  // galist = '';
  $.each(gaurls, function(url,vpage) {
    var re = /\*$/;
    var op = '=';
    if (url.match(re)) {
      op = '^=';
    }
    var asel = 'a[href' + op + '"' + url.replace(re, '') + '"]:not([ga])';
    debug_log('url=' + url + ' vpage=' + vpage + ' asel=' + asel);
    $(asel).each(function() {
      var debug_console = 0;
      var gatype = 'ga';
      if ($(this).closest('ul#primary-nav').length) {
        debug_log('you are in the top nav');
        gatype = 'ga_main_nav';
      }
      else if ($(this).closest('div.quick-links').length) {
        debug_log('you are in quick-links ');
        gatype = 'ga_bucket';
      }
      else if ($(this).closest('div.blind').length) {
        debug_log('you are in a duck blind');
        gatype = 'ga_blind';
      }
      gavalue = gaprefix + '/' + gatype + '/' + vpage;
      debug_log("set ga attribute of " + $(this).attr('href') + ' to ' + gavalue);
      $(this).addClass('track-external').attr('ga', gavalue);
      if (debug_console) {
        var dhtml = $('<div>').append($(this).clone()).remove().html();
        debug_log('result is ' + dhtml);
      }
    });
  });
  // don't do this automagically
  // $('.track-external').attr('target', '_blank');
  var trackhandler = function() {
    var debug_alert = 0;
    var href = $(this).attr('href');
    var vpage = href;
    if ($(this).attr('ga')) {
      vpage = $(this).attr('ga');
      debug_log('tracking ' + vpage);
      if (debug_alert) {
        alert('tracking ' + vpage);
      }
      _gaq.push(['_trackPageview', vpage]);
    }
    else {
      debug_log('no ga attribute');
      debug_log($(this));
    }
  };
  $('.track-external').unbind('click.GA', trackhandler);
  $('.track-external').bind('click.GA', trackhandler);
};
