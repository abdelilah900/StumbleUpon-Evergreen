<script>
	function movead(position) {
		var tolocation = $('.oasad[data-ad='+position+']');
		var fromlocaition = $('.lowad[data-ad='+position+']');
	
		if(tolocation.length != 1) return;
		if(fromlocaition.length != 1) return;
	
		// remove scripts so they don't rerun
		fromlocaition.find('script').remove();
	
		// move the nodes to the proper locations
		tolocation.append( fromlocaition.detach() );
	}
</script>

<div style="display:none">
   	
	<div class="lowad" data-ad="BigBanner">
		<script type="text/javascript">OAS_AD('BigBanner');</script>
	</div>
	<script>
		movead('BigBanner');
	</script>
	
	<div class="lowad" data-ad="Block">
		<script type="text/javascript">OAS_AD('Block');</script>
	</div>
	<script>
		movead('Block');
	</script>
	
	<div class="lowad" data-ad="StoryLogo">
		<script type="text/javascript">OAS_AD('StoryLogo');</script>
	</div>
	<script>
		movead('StoryLogo');
	</script>
	
	<div class="lowad" data-ad="Loge">
		<script type="text/javascript">OAS_AD('Loge');</script>
	</div>
	<script>
		movead('Loge');
	</script>

	<div class="lowad" data-ad="x109">
		<script type="text/javascript">OAS_AD('x109');</script>
	</div>
	<script>
		movead('x109');
	</script>

	<div class="lowad" data-ad="x87">
		<script type="text/javascript">OAS_AD('x87');</script>
	</div>
	<script>
		movead('x87');
	</script>
</div>

    </body>
</html>
