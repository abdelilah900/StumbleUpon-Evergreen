					$(this).closest('.share-data').data('twitterTemplate', this.value + ' {{title}} {{url}} #TED');
				});
			$('#twitter-post').submit(function(event) {
				event.preventDefault();
				$('#share_and_save .twitter').click();
			});

			$('#share_and_save .email').click(function() {
				$.post('/talks/addemailed', {id: 1376}, function() {}, 'json');
			});

			$('.copy_paste').selectall_field();

						$("#download_dialog").ted_dialog();
			$('#download_button').click(function(event) {
				event.preventDefault();
				var self = $(this);
				if (!self.data('loaded')) $('#download_dialog').load('/download/links/slug/VijayKumar_2012/type/talks/ext/mp4', function() {
					self.data('loaded', true);
				});
				$("#download_dialog").dialog('open');
			});
					});
		function trackLinkedIn() {
			$.trackAction('share', 'talks', '1376');
			$.GA_trackSocial('linkedin', 'share', 'vijay_kumar_robots_that_fly_and_cooperate', 'http://www.ted.com/talks/vijay_kumar_robots_that_fly_and_cooperate.html');
		}
		function trackGooglePlus(obj) {
			if (obj.state == 'on') {
				$.trackAction('share', 'talks', '1376');
				$.GA_trackSocial('google_plusone', 'share', 'vijay_kumar_robots_that_fly_and_cooperate', 'http://www.ted.com/talks/vijay_kumar_robots_that_fly_and_cooperate.html');
			}
		}
		// ]]>
		</script>
