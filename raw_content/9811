<script language="javascript">

formSet = false;	


function showOther(zip){
	getStartedLocalChannel = document.getElementById('local-channel');
	getStartedRecycleChannel = document.getElementById('recycling-channel');
	getStartedPoweredBy = document.getElementById('poweredby');
	getStartedLocalChannel.style.display = "block";
	getStartedRecycleChannel.style.display = "block";
	getStartedPoweredBy.style.display = "block";

	getStartedTextChannel = document.getElementById('startTextChannel');
	getStartedTextChannel.style.display = "none";
	
	getStartedTextChannelText = document.getElementById('startTextChannelText');
	getStartedTextChannelText.style.display = "none";
	
	passZip = zip;
	
if(formSet == true){
		mypara=document.getElementById("localFormId");
		localForm.removeChild(localSelect);
	}
	
	mypara=document.getElementById("localFormId");
	localForm=document.createElement("form");
	localForm.setAttribute("id", "local_form");
	localForm.action = "local_form";
	localForm.method = "GET";
	localForm.target ="_blank"
	localSelect = document.createElement("select");
	/*myOnChange = new Function("e", "location.href=myselect.options[myselect.selectedIndex].value");*/
	
	localOption1=document.createElement("OPTION");
	localOption1Text=document.createTextNode("farmer's markets");	
	localOption1.appendChild(localOption1Text);	
	localOption1.setAttribute("value",0);	
	localSelect.appendChild(localOption1);
	
	localOption2=document.createElement("OPTION");
	localOption2Text=document.createTextNode("farms");	
	localOption2.appendChild(localOption2Text);	
	localOption2.setAttribute("value",1);	
	localSelect.appendChild(localOption2);
	
	
	localOption3=document.createElement("OPTION");
	localOption3Text=document.createTextNode("csa");	
	localOption3.appendChild(localOption3Text);	
	localOption3.setAttribute("value",2);	
	localSelect.appendChild(localOption3);
	
	
	localOption4=document.createElement("OPTION");
	localOption14Text=document.createTextNode("grocery/co-op");	
	localOption4.appendChild(localOption14Text);	
	localOption4.setAttribute("value",3);	
	localSelect.appendChild(localOption4);
	
	
	
	
	var inputZip = document.createElement("input");
	inputZip.setAttribute("type", "hidden");
	inputZip.setAttribute("name", "zip");
	inputZip.setAttribute("value", zip);
	
	localForm.appendChild(localSelect);
	localForm.appendChild(inputZip);
	
	/*document.getElementById("localFormId").appendChild(inputZip);*/
	document.getElementById("localFormId").appendChild(localForm);
	
	formSet = true;	
}

	function submitForm(){
		/*var submitForm = getNewSubmitForm();*/
		localForm.action= "http://www.localharvest.org/getmap.jsp"
		localForm.submit();
	}

