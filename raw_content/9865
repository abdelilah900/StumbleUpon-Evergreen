<div id="SearchWrapper" class="container_24">
    <div id="search-holder" class="grid_7">
        <input autocomplete="off" id="fts_temp" name="fts" autofocus="autofocus" type="text" onkeyup="fts_temp_searchBoxKeyEvent(this, event)" value="" />
        <a href="javascript:" id="search-button" onclick="javascript:fts_temp_doSearch();"></a>
        <div class="suggestions-holder">
            
        </div>        
        <div class="clear"></div>        
    </div>
</div>

<script type="text/javascript">
    var History = window.History;
    var fts_temp_processing = false;
    var fts_temp_lastSearch = "";
    var fts_temp_lastActualSearch = "";

    function fts_temp_clearSuggestions() {
        $("#fts_temp").parents("div").children(".suggestions-holder").empty();
    }
    
    // Suggestion clicked with mouse
    $("#fts_temp").parents("div").children(".suggestions-holder").delegate(".suggestion", "click", function() {
        $("#fts_temp").val($(this).text());   // Update search box
        fts_temp_clearSuggestions();
        fts_temp_getSearchResults(false);                     // Update search results
    });

    // Flush latent logging on link follow
    $("a:not([target='_blank'])").click(function() {
        fts_temp_checkDiscardedQuery();
        return true;
    });
   
    // Flush latent logging on page unload
    $(window).unload(function() {
        fts_temp_checkDiscardedQuery();
    });
    
    function fts_temp_searchBoxKeyEvent(sender, e) {
        fts_temp_checkDiscardedQuery();

        var keyCode = null;
        
        if (window.event)
            keyCode = window.event.keyCode || window.event.charCode || window.event.which;
        else if (e)
            keyCode = e.keyCode || e.charCode || e.which;

        var ttt=$("#fts_temp").parents("div").children(".suggestions-holder .suggestion").length;
        if ($("#fts_temp").parents("div").children(".suggestions-holder").children(".suggestion").length > 0) {
            var selectedSuggestion = $("#fts_temp").parents("div").children(".suggestions-holder").children(".suggestion.selected");
            switch (keyCode) {
            case 38:
                //up arrow
                if (selectedSuggestion.length) {
                    selectedSuggestion.removeClass("selected");
                    selectedSuggestion.prev().addClass("selected");
                } else {
                    $("#fts_temp").parents("div").children(".suggestions-holder").children(".suggestion:last-child").addClass("selected");
                }

                return;
            case 40:
                //down arrow
                if (selectedSuggestion.length) {
                    selectedSuggestion.removeClass("selected");
                    selectedSuggestion.next().addClass("selected");
                } else {
                    $("#fts_temp").parents("div").children(".suggestions-holder").children(".suggestion:first-child").addClass("selected");
                }

                return;
            case 13:
                //enter
                if (selectedSuggestion.length) { // Select the active line
                    $(sender).val(selectedSuggestion.text());
                    fts_temp_clearSuggestions();
                    fts_temp_getSearchResults(false);
                } else { // Do the current search
                    fts_temp_clearSuggestions();
                    fts_temp_doSearch();
                }

                return false;
                
            default:
                break;
            }
        } else if (keyCode == 13) { // Enter on main edit box pressed
            $("#fts_temp").parents("div").children(".suggestions-holder").empty();
            fts_temp_doSearch();
            return;
        }

        // Start the timer to check for latency before checking for suggestions
        if (fts_temp_queryChanged($("#fts_temp").val())) {
            fts_temp_startKeyPressTimer();
        }
    }
    
    function fts_temp_queryChanged(query) {
        return (query != "" && query != null && query != undefined && query.length >= 3 && query != fts_temp_lastSearch);
    }

    var fts_temp_keyPressTimer = null;

    function fts_temp_stopKeyPressTimer() {
        if (fts_temp_keyPressTimer != null) {
            clearTimeout(fts_temp_keyPressTimer);
            fts_temp_keyPressTimer = null;
        }
    }
    
    function fts_temp_startKeyPressTimer() {
        fts_temp_stopKeyPressTimer();
        fts_temp_keyPressTimer = setTimeout(fts_temp_getSearchResults, 100);
    }

    function fts_temp_getSearchResults(showSuggestions) {
        fts_temp_stopKeyPressTimer();
        fts_temp_checkDiscardedQuery();

        var query = $("#fts_temp").val();

        if (!fts_temp_processing && fts_temp_queryChanged(query))
        {
            fts_temp_processing = true;
            try {
                spfilterPanel.fts = query;
            } catch (e) { }

            var model;
            
            try {
                var filter = spfilterPanel.getSearchFilterModel();
                model.filter.page = 0;
                model = {
                    fts: query,
                    includeResults: true,
                    filter: filter,
                    lastFts: fts_temp_lastSearch
                };
            } catch (e) {
                model = {
                    fts: query,
                    includeResults: true,                  
                    lastFts: fts_temp_lastSearch
                };
            }

            $.ajax({
                url: "/Browse/SearchInfo",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                traditional: true,
                data: $.toJSON(model),
                success: function(data) {
                    fts_temp_lastSearch = query;
                    fts_temp_lastActualSearch = data.ActualQuery;
                    $("#fts_temp").parents("div").children(".suggestions-holder").empty();
                    if (data.QuerySuggestions != null && showSuggestions != false) {
                        for (var i = 0; i < data.QuerySuggestions.length; i++) {
                            $("#fts_temp").parents("div").children(".suggestions-holder").append("<div class='suggestion'>" + data.QuerySuggestions[i] + "</div>");
                        }
                    }

                    if (typeof data.Skus !== 'undefined') {
                        if (data.Skus.length > 0) {
                            $('ul.list-items').html($("#productTemplate").tmpl(data.Skus));
                        } else {
                            $('ul.list-items').html("Products not found");
                        }

                        try {
                            var pageSize = parseInt($.cookie('pageSize') || 20, 10) || 20;
                            var pageOptions = { page: 0, records: data.Count, pageSize: pageSize };
                            pageSizeModule.initPager(pageOptions);

                            spfilterPanel.updateCountsWithFts(query);

                            $("#titleWrapper h1").html(query + "<small>(" + data.Count + ")</small>");
                        } catch (e) { }
                    }
                }
            }).always(function() {
                fts_temp_processing = false;

                if (fts_temp_queryChanged($("#fts_temp").val())) {
                    fts_temp_getSearchResults(); // The results are out of date, do it again
                } else {
                    fts_temp_startLoggingTimer(); // Start discarded results timer
                }
            });
        }
    }

    // Active search invocation by UI
    function fts_temp_doSearch() {
        fts_temp_logSearch(true);

        var query = $("#fts_temp").val();
        var searchQueryString;
        
        try {
            searchQueryString = spfilterPanel.getSearchFilterQueryParam();
        } catch (e) {
            searchQueryString = "";
        }

        var pathString;

        if (searchQueryString != "" && searchQueryString.indexOf("&") != undefined && searchQueryString.indexOf("&") > 0) {
            pathString = "/Browse/Explore" +
                                    "?fts=" + query.replace(new RegExp(" ", 'g'), "+")
                                    + spfilterPanel.getSearchFilterQueryParam().substring(searchQueryString.indexOf("&"));
        } else {
            pathString = "/Browse/Explore" + "?fts=" + query.replace(new RegExp(" ", 'g'), "+");
        }

        if ($.browser.msie || window.location.pathname != "/Browse/Explore") {
            window.location = pathString;
        }
        else {
            if (History.enabled) {
                History.replaceState({}, document.title, pathString);
            }

            fts_temp_getSearchResults();
        }

        return false;
    }

    var fts_temp_queryDiscarded = false;
    var fts_temp_loggingTimer = null;

    function fts_temp_startLoggingTimer() {
        fts_temp_checkDiscardedQuery();
        fts_temp_loggingTimer = setTimeout(fts_temp_loggingTimeout, 5000);
    }

    // The search have not been used within the timeout
    function fts_temp_loggingTimeout() {
        fts_temp_queryDiscarded = true;
    }

    function fts_temp_checkDiscardedQuery() {
        var oldQueryChanged = fts_temp_queryDiscarded;
        
        fts_temp_queryDiscarded = false;

        if (fts_temp_loggingTimer != null) {
            clearTimeout(fts_temp_loggingTimer);
            fts_temp_loggingTimer = null;
        }

        if (oldQueryChanged) {
            fts_temp_logSearch(false); // Log a discarded search
        }
    }

    var fts_temp_lastLoggedFts;

    var _gaq = _gaq || [];

    function fts_temp_logSearch(clicked) {
        if (fts_temp_lastActualSearch > '' && fts_temp_lastLoggedFts != fts_temp_lastActualSearch) {
            fts_temp_lastLoggedFts = fts_temp_lastActualSearch;
            if (clicked) {
                _gaq.push(['_trackEvent', 'Search', 'clicked ' + fts_temp_lastLoggedFts]);
            } else {
                _gaq.push(['_trackEvent', 'Search', 'discarded ' + fts_temp_lastLoggedFts]);
            }
        }

        fts_temp_queryDiscarded = false; // The query has been logged, clear the discared flag just in case
    }
</script>
                </div>
                
            </div>           
        </div>
        <div class="clear"></div>
