<script type="text/javascript">
    function closePromoPopup() {
        $.cookie('promo', '-156845737', { expires: 365, path: '/' });
        $('#promoPopup').remove();
    }
//
    var promoModule = function() {
        var controls = {
            signupButton: null,
            txtEmail: null,
            errorMessage: null
        };

        function isValidEmail(emailValue) {
            var emailRegx = /^([A-Za-z0-9_\-\.])+\@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;

            if (emailValue == '') {
                controls.errorMessage.text('The Email field is required.');
                return false;
            }

            if (emailRegx.test(emailValue) == false) {
                controls.errorMessage.text('Enter valid email addrees.');
                return false;
            }
            return true;
        }

        function initEvents() {
            controls.signupButton = $('a#signUpPromo');
            controls.txtEmail = $('#userEmailPromo');
            controls.errorMessage = $('#validationErrorPromo');

            controls.signupButton.click(function(e) {
                e.preventDefault();
                var email = $.trim($('#userEmailPromo').val());

                controls.txtEmail.trigger('change');

                if (isValidEmail(email)) {
                    var url = $(this).attr('href') + '?email=' + email;
                    window.location = url;
                    closePromoPopup();
                }

                return false;
            });

            controls.txtEmail.change(function() {
                if (isValidEmail($.trim($(this).val()))) {
                    controls.txtEmail.removeClass('input-validation-error');
                    controls.errorMessage.hide();

                    return;
                }

                controls.txtEmail.addClass('input-validation-error');
                controls.errorMessage.show();
            });
        }

        initEvents();
    } ();
//
</script>
