<script type="text/javascript">
    (function() {
        var containerWidth = 0;

        //this is some kind of hack to avoid unexpected width jumping on hover
        $.each($("#primary_nav ul.parent li.parent:nth-child(2) .submenu-container .second-level-menu .column .item"), function(index, value) {
            $(value).width($(value).width() + 5);
        });
        
        //this calculates container width for submenu-container to fit to content
        $.each($("#primary_nav ul.parent li.parent:nth-child(2) .submenu-container .second-level-menu"), function(index, value) {
            containerWidth += $(value).width();
        });
        
        //alert(containerWidth);
        $("#primary_nav ul.parent li.parent:nth-child(2) .submenu-container").width(containerWidth + 10);
        $("#primary_nav ul.parent li.parent:nth-child(2) .submenu-container").css("left", containerWidth / 2 - containerWidth + 20);
    })()
</script>  
