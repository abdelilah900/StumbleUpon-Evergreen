<div id="SearchWrapper" class="container_24">
    <div id="search-holder" class="grid_7">
        <input autocomplete="off" id="fts" name="fts" autofocus="autofocus" type="text" onkeyup="fts_searchBoxKeyEvent(this, event)" value="" />
        <a href="javascript:" id="search-button" onclick="javascript:fts_doSearch();"></a>
        <div class="suggestions-holder">
            
        </div>        
        <div class="clear"></div>        
    </div>
</div>

<script type="text/javascript">
    var History = window.History;
    var fts_processing = false;
    var fts_lastSearch = "";
    var fts_lastActualSearch = "";

    function fts_clearSuggestions() {
        $("#fts").parents("div").children(".suggestions-holder").empty();
    }
    
    // Suggestion clicked with mouse
    $("#fts").parents("div").children(".suggestions-holder").delegate(".suggestion", "click", function() {
        $("#fts").val($(this).text());   // Update search box
        fts_clearSuggestions();
        fts_getSearchResults(false);                     // Update search results
    });

    // Flush latent logging on link follow
    $("a:not([target='_blank'])").click(function() {
        fts_checkDiscardedQuery();
        return true;
    });
   
    // Flush latent logging on page unload
    $(window).unload(function() {
        fts_checkDiscardedQuery();
    });
    
    function fts_searchBoxKeyEvent(sender, e) {
        fts_checkDiscardedQuery();

        var keyCode = null;
        
        if (window.event)
            keyCode = window.event.keyCode || window.event.charCode || window.event.which;
        else if (e)
            keyCode = e.keyCode || e.charCode || e.which;

        var ttt=$("#fts_temp").parents("div").children(".suggestions-holder .suggestion").length;
        if ($("#fts").parents("div").children(".suggestions-holder").children(".suggestion").length > 0) {
            var selectedSuggestion = $("#fts").parents("div").children(".suggestions-holder").children(".suggestion.selected");
            switch (keyCode) {
            case 38:
                //up arrow
                if (selectedSuggestion.length) {
                    selectedSuggestion.removeClass("selected");
                    selectedSuggestion.prev().addClass("selected");
                } else {
                    $("#fts").parents("div").children(".suggestions-holder").children(".suggestion:last-child").addClass("selected");
                }

                return;
            case 40:
                //down arrow
                if (selectedSuggestion.length) {
                    selectedSuggestion.removeClass("selected");
                    selectedSuggestion.next().addClass("selected");
                } else {
                    $("#fts").parents("div").children(".suggestions-holder").children(".suggestion:first-child").addClass("selected");
                }

                return;
            case 13:
                //enter
                if (selectedSuggestion.length) { // Select the active line
                    $(sender).val(selectedSuggestion.text());
                    fts_clearSuggestions();
                    fts_getSearchResults(false);
                } else { // Do the current search
                    fts_clearSuggestions();
                    fts_doSearch();
                }

                return false;
                
            default:
                break;
            }
        } else if (keyCode == 13) { // Enter on main edit box pressed
            $("#fts").parents("div").children(".suggestions-holder").empty();
            fts_doSearch();
            return;
        }

        // Start the timer to check for latency before checking for suggestions
        if (fts_queryChanged($("#fts").val())) {
            fts_startKeyPressTimer();
        }
    }
    
    function fts_queryChanged(query) {
        return (query != "" && query != null && query != undefined && query.length >= 3 && query != fts_lastSearch);
    }

    var fts_keyPressTimer = null;

    function fts_stopKeyPressTimer() {
        if (fts_keyPressTimer != null) {
            clearTimeout(fts_keyPressTimer);
            fts_keyPressTimer = null;
        }
    }
    
    function fts_startKeyPressTimer() {
        fts_stopKeyPressTimer();
        fts_keyPressTimer = setTimeout(fts_getSearchResults, 100);
    }

    function fts_getSearchResults(showSuggestions) {
        fts_stopKeyPressTimer();
        fts_checkDiscardedQuery();

        var query = $("#fts").val();

        if (!fts_processing && fts_queryChanged(query))
        {
            fts_processing = true;
            try {
                spfilterPanel.fts = query;
            } catch (e) { }

            var model;
            
            try {
                var filter = spfilterPanel.getSearchFilterModel();
                model.filter.page = 0;
                model = {
                    fts: query,
                    includeResults: true,
                    filter: filter,
                    lastFts: fts_lastSearch
                };
            } catch (e) {
                model = {
                    fts: query,
                    includeResults: true,                  
                    lastFts: fts_lastSearch
                };
            }

            $.ajax({
                url: "/Browse/SearchInfo",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                traditional: true,
                data: $.toJSON(model),
                success: function(data) {
                    fts_lastSearch = query;
                    fts_lastActualSearch = data.ActualQuery;
                    $("#fts").parents("div").children(".suggestions-holder").empty();
                    if (data.QuerySuggestions != null && showSuggestions != false) {
                        for (var i = 0; i < data.QuerySuggestions.length; i++) {
                            $("#fts").parents("div").children(".suggestions-holder").append("<div class='suggestion'>" + data.QuerySuggestions[i] + "</div>");
                        }
                    }

                    if (typeof data.Skus !== 'undefined') {
                        if (data.Skus.length > 0) {
                            $('ul.list-items').html($("#productTemplate").tmpl(data.Skus));
                        } else {
                            $('ul.list-items').html("Products not found");
                        }

                        try {
                            var pageSize = parseInt($.cookie('pageSize') || 20, 10) || 20;
                            var pageOptions = { page: 0, records: data.Count, pageSize: pageSize };
                            pageSizeModule.initPager(pageOptions);

                            spfilterPanel.updateCountsWithFts(query);

                            $("#titleWrapper h1").html(query + "<small>(" + data.Count + ")</small>");
                        } catch (e) { }
                    }
                }
            }).always(function() {
                fts_processing = false;

                if (fts_queryChanged($("#fts").val())) {
                    fts_getSearchResults(); // The results are out of date, do it again
                } else {
                    fts_startLoggingTimer(); // Start discarded results timer
                }
            });
        }
    }

    // Active search invocation by UI
    function fts_doSearch() {
        fts_logSearch(true);

        var query = $("#fts").val();
        var searchQueryString;
        
        try {
            searchQueryString = spfilterPanel.getSearchFilterQueryParam();
        } catch (e) {
            searchQueryString = "";
        }

        var pathString;

        if (searchQueryString != "" && searchQueryString.indexOf("&") != undefined && searchQueryString.indexOf("&") > 0) {
            pathString = "/Browse/Explore" +
                                    "?fts=" + query.replace(new RegExp(" ", 'g'), "+")
                                    + spfilterPanel.getSearchFilterQueryParam().substring(searchQueryString.indexOf("&"));
        } else {
            pathString = "/Browse/Explore" + "?fts=" + query.replace(new RegExp(" ", 'g'), "+");
        }

        if ($.browser.msie || window.location.pathname != "/Browse/Explore") {
            window.location = pathString;
        }
        else {
            if (History.enabled) {
                History.replaceState({}, document.title, pathString);
            }

            fts_getSearchResults();
        }

        return false;
    }

    var fts_queryDiscarded = false;
    var fts_loggingTimer = null;

    function fts_startLoggingTimer() {
        fts_checkDiscardedQuery();
        fts_loggingTimer = setTimeout(fts_loggingTimeout, 5000);
    }

    // The search have not been used within the timeout
    function fts_loggingTimeout() {
        fts_queryDiscarded = true;
    }

    function fts_checkDiscardedQuery() {
        var oldQueryChanged = fts_queryDiscarded;
        
        fts_queryDiscarded = false;

        if (fts_loggingTimer != null) {
            clearTimeout(fts_loggingTimer);
            fts_loggingTimer = null;
        }

        if (oldQueryChanged) {
            fts_logSearch(false); // Log a discarded search
        }
    }

    var fts_lastLoggedFts;

    var _gaq = _gaq || [];

    function fts_logSearch(clicked) {
        if (fts_lastActualSearch > '' && fts_lastLoggedFts != fts_lastActualSearch) {
            fts_lastLoggedFts = fts_lastActualSearch;
            if (clicked) {
                _gaq.push(['_trackEvent', 'Search', 'clicked ' + fts_lastLoggedFts]);
            } else {
                _gaq.push(['_trackEvent', 'Search', 'discarded ' + fts_lastLoggedFts]);
            }
        }

        fts_queryDiscarded = false; // The query has been logged, clear the discared flag just in case
    }
</script>
            </div>
            <div class="grid_18 omega">
                

