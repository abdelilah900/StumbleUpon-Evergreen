// EmailFriend	
jQuery(function() {
				jQuery("#email_button").toggle(function() {
					jQuery("#emailform").slideDown();
					return false;
				},
				function() {
					jQuery("#emailform:visible").slideUp();
					jQuery("#emailformsuccess:visible").hide();
					return false;
				});
				
				jQuery("a#close-emailformsuccess").click(function() {
					jQuery("#emailformsuccess:visible").slideUp();
					return false;
				});
				
				jQuery("a#close-emailform").click(function() {
					jQuery("#emailform:visible").slideUp();
					return false;
				});
				
				jQuery("#send-email-button").click(function() {
					var pageLink = window.location.href;
					var yname = document.inlineemail.yname.value;
					var yemail = document.inlineemail.yemail.value;
					var fname = document.inlineemail.fname.value;
					var femail = document.inlineemail.femail.value;
					
					var comments = document.inlineemail.comments.value;
					var personal = comments.length > 0 ? "Personal Message: " + comments : "";
					
					if (yname.length == 0) {
						alert ("Please enter your name.")
						return false;
					}
					if (yemail.length == 0) {
						alert ("Please enter your email address.")
						return false;
					}
					if (fname.length == 0) {
						alert ("Please enter your friend's name.")
						return false;
					}
					if (femail.length == 0) {
						alert ("Please enter your friend's email address.")
						return false;
					}
					
					jQuery("span#friendemail").html(yname);
					jQuery("span#youremail").html(yemail);
					jQuery("span#subject").html(yname + " sent you a link");
					jQuery("span#friendname").html(fname);
					jQuery("span.yourname").html(yname);
					jQuery("a#url-a").attr("href", pageLink);
					jQuery("span#url-span").html(pageLink);
					jQuery("p#personal").html(personal);
					
					jQuery("#emailform").hide();
					jQuery("#emailformsuccess").show();
					
					jQuery.post("/wnet/need-to-know/wp-content/common/includes/inc-email-this-sent.php",
						{yname: yname, yemail: yemail, fname: fname, femail: femail, comments: comments, url: pageLink});
					
					function slideUpThankyou() {
						jQuery("#emailformsuccess:visible").slideUp();
					}
					
					setTimeout(slideUpThankyou, 10000);
					
					return false;
				});
			});		
</script>		
